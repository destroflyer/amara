<template>
    <entity>
        <name>Beetle Golem</name>
        <!--model-->
        <model>Models/beetle_golem/skin_dark.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>Idle_Normal</name>
                <loopDuration>2.5</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>Walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>Attack1</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>Death</name>
                <loopDuration>2</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup group="units" collidesWith="map|units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseMaximumHealth>900</baseMaximumHealth>
        <baseAttackDamage>35</baseAttackDamage>
        <baseAttackSpeed>0.7</baseAttackSpeed>
        <baseWalkSpeed>4</baseWalkSpeed>
        <requestUpdateAttributes/>
        <isTargetable/>
        <isVulnerable/>
        <!--spells-->
        <autoAttack>
            <entity template="melee_autoattack"/>
        </autoAttack>
        <spells>
            <entity template="beetle_golem_sleep"/>
        </spells>
    </entity>
</template>