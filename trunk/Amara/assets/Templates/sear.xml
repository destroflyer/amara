<template>
    <entity id="spell">
        <name>Sear</name>
        <description>Throws a fireball.</description>
        <spellVisualisation>sear</spellVisualisation>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>sear_projectile</spawnTemplate>
                                <spawnMovementSpeed>10</spawnMovementSpeed>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--play audio-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/sear_cast.ogg</audio>
                                <audioVolume>0.75</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castTurnToTarget/>
        <baseCooldown>8</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <flatMagicDamage>80</flatMagicDamage>
                        <scalingAbilityPowerMagicDamage>0.65</scalingAbilityPowerMagicDamage>
                        <addStun>0.5</addStun>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>