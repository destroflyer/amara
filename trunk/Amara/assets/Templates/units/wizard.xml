<template>
    <entity>
        <name>Wizard</name>
        <!--model-->
        <model>Models/wizard/skin_default.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>idle</name>
                <loopDuration>6</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>auto_attack</name>
            </entity>
        </autoAttackAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup group="units" collidesWith="map|units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseMaximumHealth>500</baseMaximumHealth>
        <baseAttackDamage>60</baseAttackDamage>
        <baseAttackSpeed>0.7</baseAttackSpeed>
        <baseArmor>20</baseArmor>
        <baseMagicResistance>30</baseMagicResistance>
        <baseWalkSpeed>6</baseWalkSpeed>
        <inventory>
            <entity template="items/boots"/>
            <entity template="items/dorans_blade"/>
            <entity template="items/dorans_ring"/>
            <entity template="items/needlessly_large_rod"/>
            <entity template="items/dagger"/>
        </inventory>
        <requestUpdateAttributes/>
        <isTargetable/>
        <isVulnerable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/default_autoattack"/>
        </autoAttack>
        <learnableSpells>
            <entity template="spells/sear"/>
            <entity template="spells/pillar_of_flame"/>
            <entity template="spells/battle_cry"/>
        </learnableSpells>
        <!--other-->
        <healthBarStyle>character</healthBarStyle>
    </entity>
</template>