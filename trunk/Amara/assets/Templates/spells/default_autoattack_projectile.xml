<template>
    <entity id="projectile">
        <model>Models/energy_projectile/skin.xml</model>
        <hitbox>
            <point/>
        </hitbox>
        <hitboxActive/>
        <isProjectile/>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <targetReachedTrigger/>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
            </entity>
        </triggeredEffect>
        <triggerSource>#projectile</triggerSource>
    </entity>
    <!--remove projectile-->
    <entity>
        <targetReachedTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#projectile</triggerSource>
    </entity>
</template>