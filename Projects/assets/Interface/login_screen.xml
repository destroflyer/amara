<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    <screen id="start" controller="amara.engine.applications.launcher.startscreen.gui.ScreenController_LoginScreen">
        <layer childLayout="absolute">
            <panel x="10px" y="130px" width="200px" height="128px" childLayout="center">
                <image id="box_background" filename="Interface/client/login/box.png"/>
                <panel childLayout="horizontal">
                    <panel width="5px"/>
                    <panel childLayout="vertical">
                        <panel height="5px"/>
                        <text id="label_login" text="Login:" textHAlign="left" font="Interface/fonts/Verdana_12.fnt"/>
                        <control id="login" name="textfield" height="20px" text=""/>
                        <panel height="2px"/>
                        <text id="label_password" text="Password:" textHAlign="left" font="Interface/fonts/Verdana_12.fnt"/>
                        <control id="password" name="textfield" height="20px" text=""/>
                        <panel height="12px"/>
                        <control name="button" width="100%" height="30px" label="Login">
                            <interact onClick="login()"/>
                        </control>
                    </panel>
                    <panel width="5px"/>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>