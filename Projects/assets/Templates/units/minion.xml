<template>
    <entity>
        <name>Minion</name>
        <!--model-->
        <model>Models/minion/skin_default.xml</model>
        <animation>
            <entity>
                <name>dance</name>
                <loopDuration>2.66</loopDuration>
            </entity>
        </animation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>auto_attack</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>death</name>
                <loopDuration>1</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <!--physics-->
        <hitbox>
            <regularCyclic edges="6" radius="2"/>
        </hitbox>
        <scale>0.75</scale>
        <intersectionPush/>
        <collisionGroup group="units" collidesWith="map|units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>500</bonusFlatMaximumHealth>
                <bonusFlatHealthRegeneration>1</bonusFlatHealthRegeneration>
                <bonusFlatAttackDamage>50</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>0.6</bonusFlatAttackSpeed>
                <bonusFlatArmor>25</bonusFlatArmor>
                <bonusFlatMagicResistance>30</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>6</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <attributesPerLevel>
            <entity>
                <bonusFlatMaximumHealth>80</bonusFlatMaximumHealth>
                <bonusFlatHealthRegeneration>0.15</bonusFlatHealthRegeneration>
                <bonusFlatAttackDamage>3</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>0.02</bonusFlatAttackSpeed>
                <bonusFlatArmor>3</bonusFlatArmor>
                <bonusFlatMagicResistance>0</bonusFlatMagicResistance>
            </entity>
        </attributesPerLevel>
        <requestUpdateAttributes/>
        <isTargetable/>
        <isVulnerable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/ranged_autoattack"/>
        </autoAttack>
        <learnableSpells>
            <entity template="spells/null_sphere"/>
            <entity template="spells/riftwalk/base"/>
            <entity template="spells/ignite/base"/>
        </learnableSpells>
        <!--other-->
        <healthBarStyle>character</healthBarStyle>
    </entity>
</template>