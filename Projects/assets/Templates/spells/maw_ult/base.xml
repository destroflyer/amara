<template>
    <value name="duration">15</value>
    <entity id="spell">
        <name>Ult</name>
        <description>Maw empowers himself for [duration] seconds, gaining health, attack damage, armor and magic resistance.</description>
        <spellVisualisation>maw_ult</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <baseCooldown>60</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="[duration]">
                            <entity>
                                <buffVisualisation>baron_nashor</buffVisualisation>
                                <continuousAttributes>
                                    <entity>
                                        <bonusFlatMaximumHealth>350</bonusFlatMaximumHealth>
                                        <bonusFlatAttackDamage>20</bonusFlatAttackDamage>
                                        <bonusFlatArmor>20</bonusFlatArmor>
                                        <bonusFlatMagicResistance>20</bonusFlatMagicResistance>
                                    </entity>
                                </continuousAttributes>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>