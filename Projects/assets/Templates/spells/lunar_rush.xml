<template>
    <entity id="spell">
        <name>Lunar Rush</name>
        <spellVisualisation>lunar_rush</spellVisualisation>
        <instantEffectTriggers>
            <!--move to target-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <move>
                            <entity>
                                <targetedMovementTarget/>
                                <movementSpeed>40</movementSpeed>
                                <movementAnimation>
                                    <entity>
                                        <name>Jumping</name>
                                        <loopDuration>0.6</loopDuration>
                                    </entity>
                                </movementAnimation>
                            </entity>
                        </move>
                        <deactivateHitbox/>
                        <addEffectTriggers>
                            <!--trigger spell effects-->
                            <entity>
                                <targetReachedTrigger/>
                                <targetTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <triggerSpellEffects>#spell</triggerSpellEffects>
                                    </entity>
                                </triggeredEffect>
                                <triggerOnce/>
                            </entity>
                            <!--reactivate hitbox-->
                            <entity>
                                <targetReachedTrigger/>
                                <sourceTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <activateHitbox/>
                                    </entity>
                                </triggeredEffect>
                                <triggerOnce/>
                                <triggerOnCancel/>
                            </entity>
                        </addEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>single_target</castType>
        <castCancelAction/>
        <castTurnToTarget/>
        <range>20</range>
        <baseCooldown>25</baseCooldown>
        <spellTargetRules>
            <entity>
                <acceptEnemies/>
            </entity>
        </spellTargetRules>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <magicDamage>100 + (0.6 * source.abilityPower)</magicDamage>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>