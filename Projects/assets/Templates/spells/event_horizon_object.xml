<template>
    <entity id="object">
        <model>Models/event_horizon/skin.xml</model>
        <!--hitbox is generated via code-->
        <collisionGroup group="spells" collidesWith="units"/>
        <hitboxActive/>
        <intersectionRules>
            <entity>
                <acceptEnemies/>
            </entity>
        </intersectionRules>
        <lifetime>3</lifetime>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger/>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
</template>