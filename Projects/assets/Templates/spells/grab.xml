<template>
    <entity id="spell">
        <name>Grab</name>
        <description>Beep boop.</description>
        <spellVisualisation>grab</spellVisualisation>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./grab_projectile</spawnTemplate>
                                <spawnMovementSpeed>12</spawnMovementSpeed>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--play audio-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/grab_cast.ogg</audio>
                                <audioVolume>0.75</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castDuration>1.5</castDuration>
        <stopBeforeCasting/>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>grab</name>
                <loopDuration>1.5</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>20</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <move>
                            <entity>
                                <movementTarget>[parameter0]</movementTarget>
                                <movementSpeed>9</movementSpeed>
                            </entity>
                        </move>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>