<template>
    <entity id="spell">
        <name>Fatique</name>
        <description>Slows an enemy character by 30% and reduces his damage dealt by 40% for 3 seconds.</description>
        <spellVisualisation>fatique</spellVisualisation>
        <spellIndicator>
            <entity>
                <circleIndicator radius="10"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/fatique_cast.ogg</audio>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>single_target</castType>
        <castTurnToTarget/>
        <range>10</range>
        <baseCooldown>210</baseCooldown>
        <spellTargetRules>
            <entity>
                <requireCharacter/>
                <acceptEnemies/>
            </entity>
        </spellTargetRules>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="3">
                            <entity>
                                <buffVisualisation>withered</buffVisualisation>
                                <continuousAttributes>
                                    <entity>
                                        <bonusPercentageWalkSpeed>-0.3</bonusPercentageWalkSpeed>
                                        <bonusPercentageOutgoingDamageAmplification>-0.4</bonusPercentageOutgoingDamageAmplification>
                                    </entity>
                                </continuousAttributes>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>