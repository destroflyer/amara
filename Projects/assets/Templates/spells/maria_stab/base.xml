<template>
    <value name="delay">0.5</value>
    <value name="slowDuration">2</value>
    <entity id="spell">
        <name>Stab</name>
        <description>Afer [delay] seconds, Maria stabs her sword in a straight line. The first enemy hit will be damaged and slowed for [slowDuration] seconds.</description>
        <spellVisualisation>maria_stab</spellVisualisation>
        <spellIndicator>
            <entity>
                <rectangleIndicator width="2" height="11"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn object-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object</spawnTemplate>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
            <!--play audio-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/maria_stab_cast.ogg</audio>
                                <audioVolume>0.75</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>0.2</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castDuration>[delay]</castDuration>
        <stopBeforeCasting/>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>upward_thrust</name>
                <loopDuration>1</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>9</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>100 + (0.3 * source.attackDamage)</physicalDamage>
                        <addBuff duration="[slowDuration]">
                            <entity>
                                <continuousAttributes>
                                    <entity>
                                        <bonusPercentageWalkSpeed>-0.3</bonusPercentageWalkSpeed>
                                    </entity>
                                </continuousAttributes>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>