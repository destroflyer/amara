<template>
    <value name="delay">0.4</value>
    <value name="slowDuration">2</value>
    <entity id="spell">
        <name>Rock</name>
        <description>Throws a rock in the target direction. The first enemy hit is damaged and slowed for [slowDuration] seconds.</description>
        <spellVisualisation>maw_rock</spellVisualisation>
        <spellIndicator>
            <entity>
                <rectangleIndicator width="2" height="13.6"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./projectile</spawnTemplate>
                                <spawnMovementSpeed>17</spawnMovementSpeed>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
            <!--play audio-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/infected_cleaver_cast.ogg</audio>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>stable_sword_outward_slash</name>
                <loopDuration>1</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>7</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <magicDamage>100</magicDamage>
                        <addBuff duration="[slowDuration]">
                            <entity>
                                <continuousAttributes>
                                    <entity>
                                        <bonusPercentageWalkSpeed>-0.4</bonusPercentageWalkSpeed>
                                    </entity>
                                </continuousAttributes>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>