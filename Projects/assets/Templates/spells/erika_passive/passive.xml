<template>
    <value name="duration">3</value>
    <entity id="passive">
        <name>Robin's Gift</name>
        <description>Your spells mark hit targets for [duration] seconds. Your basic abilities have an additional effect if they hit already marked targets.</description>
        <passiveAddedEffectTriggers>
            <!--add spell effect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <addSpellsSpellEffects setSourcesToSpells="true">
                            <entity id="newSpellEffect">
                                <castedEffectTriggers>
                                    <!--add buff-->
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addBuff duration="[duration]">
                                                    <entity id="buff">
                                                        <buffVisualisation>robins_gift</buffVisualisation>
                                                    </entity>
                                                </addBuff>
                                            </entity>
                                        </triggeredEffect>
                                    </entity>
                                    <!--target effect-->
                                    <entity>
                                        <targetTarget/>
                                        <triggerConditions>
                                            <entity>
                                                <targetTarget/>
                                                <hasBuffCondition>#buff</hasBuffCondition>
                                            </entity>
                                        </triggerConditions>
                                        <triggeredEffect>
                                            <entity>
                                                <triggerErikaPassive/>
                                                <playAudio>
                                                    <entity>
                                                        <audio>Sounds/sounds/spells/erika_passive_hit.ogg</audio>
                                                        <audioVolume>0.75</audioVolume>
                                                    </entity>
                                                </playAudio>
                                            </entity>
                                        </triggeredEffect>
                                    </entity>
                                </castedEffectTriggers>
                            </entity>
                        </addSpellsSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveAddedEffectTriggers>
        <passiveRemovedEffectTriggers>
            <!--remove spell effect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeSpellEffects>#newSpellEffect</removeSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveRemovedEffectTriggers>
    </entity>
</template>