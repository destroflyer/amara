<template>
    <entity id="projectile">
        <isProjectile/>
        <!--<model>Models/kachujin_mind_of_the_monk_projectile/skin.xml</model>-->
        <model>Models/cloud/skin.xml</model>
        <hitbox>
            <circle radius="0.9"/>
        </hitbox>
        <collisionGroup group="spells" collidesWith="units"/>
        <hitboxActive/>
        <intersectionRules>
            <entity>
                <acceptEnemies/>
            </entity>
        </intersectionRules>
        <lifetime>0.9</lifetime>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger/>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
            </entity>
        </triggeredEffect>
        <triggerSource>#projectile</triggerSource>
    </entity>
    <!--remove projectile-->
    <entity>
        <collisionTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#projectile</triggerSource>
    </entity>
</template>