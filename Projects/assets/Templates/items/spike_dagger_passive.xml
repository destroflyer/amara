<template>
    <value name="duration">2</value>
    <value name="maximumStacks">8</value>
    <entity id="passive">
        <unique/>
        <name>I'm back!</name>
        <description>Your basic attacks grant a stack (+12% attack speed), up to a maximum of [maximumStacks] stacks. The stacks will get removed after [duration] seconds of not attacking.</description>
        <passiveAddedEffectTriggers>
            <!--add buff and spelleffect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <addAutoAttackSpellEffects>
                            <entity id="newSpellEffect">
                                <castedEffectTriggers>
                                    <!--add buff-->
                                    <entity>
                                        <casterTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addBuff duration="[duration]">
                                                    <entity id="buff">
                                                        <buffStacks>
                                                            <entity id="buffStacks">
                                                                <stacks>0</stacks>
                                                                <maximumStacks>[maximumStacks]</maximumStacks>
                                                            </entity>
                                                        </buffStacks>
                                                        <continuousAttributesPerStack>
                                                            <entity>
                                                                <bonusPercentageAttackSpeed>0.12</bonusPercentageAttackSpeed>
                                                            </entity>
                                                        </continuousAttributesPerStack>
                                                        <onBuffRemoveEffectTriggers>
                                                            <entity>
                                                                <customTarget>#buffStacks</customTarget>
                                                                <triggeredEffect>
                                                                    <entity>
                                                                        <clearStacks/>
                                                                    </entity>
                                                                </triggeredEffect>
                                                                <triggerSource>#passive</triggerSource>
                                                            </entity>
                                                        </onBuffRemoveEffectTriggers>
                                                    </entity>
                                                </addBuff>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                    <!--add stacks-->
                                    <entity>
                                        <customTarget>#buffStacks</customTarget>
                                        <triggeredEffect>
                                            <entity>
                                                <addStacks>1</addStacks>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                </castedEffectTriggers>
                            </entity>
                        </addAutoAttackSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveAddedEffectTriggers>
        <passiveRemovedEffectTriggers>
            <!--remove spell effect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeBuff>#buff</removeBuff>
                        <removeSpellEffects>#newSpellEffect</removeSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveRemovedEffectTriggers>
    </entity>
</template>