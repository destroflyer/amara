<template>
    <value name="duration">2.5</value>
    <entity id="spell">
        <unique/>
        <name>Stasis</name>
        <description>Put yourself in stasis for [duration] seconds, rendering yourself untargetable and invulnerable.</description>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <baseCooldown>5</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <removeTargetability/>
                        <removeVulnerability/>
                        <playAudio>
                            <entity id="audioStart">
                                <audio>Sounds/sounds/spells/zhonyas_start.ogg</audio>
                            </entity>
                            <entity id="audioLoop">
                                <audio>Sounds/sounds/spells/zhonyas_loop.ogg</audio>
                                <audioLoop/>
                                <audioSuccessor delay="0.05">#audioStart</audioSuccessor>
                            </entity>
                        </playAudio>
                        <addBuff duration="[duration]">
                            <entity>
                                <buffVisualisation>zhonyas</buffVisualisation>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <casterTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addTargetability/>
                                                <addVulnerability/>
                                                <stopAudio>#audioLoop</stopAudio>
                                                <playAudio>
                                                    <entity>
                                                        <audio>Sounds/sounds/spells/zhonyas_end.ogg</audio>
                                                    </entity>
                                                </playAudio>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>