<template>
    <entity>
        <name>Daydream</name>
        <!--model-->
        <model>Models/daydream/skin_default.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>stand</name>
                <loopDuration>8</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <walkStepDistance>7</walkStepDistance>
        <autoAttackAnimation>
            <entity>
                <name>attack_1</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>death</name>
                <loopDuration>1</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup group="units" collidesWith="map|units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseMaximumHealth>1000</baseMaximumHealth>
        <baseHealthRegeneration>10</baseHealthRegeneration>
        <baseAttackDamage>200</baseAttackDamage>
        <baseAttackSpeed>0.6</baseAttackSpeed>
        <baseArmor>30</baseArmor>
        <baseMagicResistance>30</baseMagicResistance>
        <baseWalkSpeed>5.75</baseWalkSpeed>
        <inventory>
            <entity template="items/boots"/>
            <entity template="items/youmuus_ghostblade"/>
        </inventory>
        <requestUpdateAttributes/>
        <isTargetable/>
        <isVulnerable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <spells>
            <empty/>
            <empty/>
            <empty/>
            <entity template="spells/hammer_of_wrath"/>
        </spells>
    </entity>
</template>