<template>
    <entity>
        <name>Varus</name>
        <!--model-->
        <model>Models/varus/skin_default.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>idle</name>
                <loopDuration>3</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>auto_attack</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>death</name>
                <loopDuration>1.5</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1.5"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup group="units" collidesWith="map|units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseMaximumHealth>500</baseMaximumHealth>
        <baseAttackDamage>80</baseAttackDamage>
        <baseAttackSpeed>0.7</baseAttackSpeed>
        <baseArmor>22</baseArmor>
        <baseMagicResistance>30</baseMagicResistance>
        <baseWalkSpeed>5.5</baseWalkSpeed>
        <inventory>
            <entity template="boots"/>
            <entity template="dorans_blade"/>
        </inventory>
        <requestUpdateAttributes/>
        <isTargetable/>
        <isVulnerable/>
        <!--spells-->
        <autoAttack>
            <entity template="default_autoattack"/>
        </autoAttack>
        <spells>
            <empty/>
            <entity template="bubble_gun"/>
            <entity template="sapling_toss"/>
            <entity template="glass_wall"/>
        </spells>
    </entity>
</template>