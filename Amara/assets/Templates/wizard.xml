<template>
    <entity>
        <name>Wizard</name>
        <!--model-->
        <model>Models/wizard/skin_default.xml</model>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>auto_attack</name>
            </entity>
        </autoAttackAnimation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <scale>0.5</scale>
        <intersectionPush/>
        <collisionGroup group="units" collidesWith="map|units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseMaximumHealth>500</baseMaximumHealth>
        <baseAttackDamage>60</baseAttackDamage>
        <baseAttackSpeed>0.7</baseAttackSpeed>
        <baseArmor>20</baseArmor>
        <baseMagicResistance>30</baseMagicResistance>
        <baseWalkSpeed>5</baseWalkSpeed>
        <inventory>
            <entity template="boots"/>
            <entity template="dorans_blade"/>
            <entity template="dorans_ring"/>
            <entity template="needlessly_large_rod"/>
            <entity template="dagger"/>
        </inventory>
        <requestUpdateAttributes/>
        <isTargetable/>
        <isVulnerable/>
        <!--spells-->
        <autoAttack>
            <entity template="default_autoattack"/>
        </autoAttack>
        <spells>
            <entity template="sear"/>
            <entity template="pillar_of_flame"/>
            <entity template="battle_cry"/>
        </spells>
    </entity>
</template>