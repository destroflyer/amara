<template>
    <entity id="spell">
        <name>Infected Cleaver</name>
        <spellVisualisation>infected_cleaver</spellVisualisation>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>infected_cleaver_projectile</spawnTemplate>
                                <spawnMovementSpeed>17</spawnMovementSpeed>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--play audio-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/infected_cleaver_cast.ogg</audio>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castDuration>0.3</castDuration>
        <stopBeforeCasting/>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>punch</name>
                <loopDuration>0.25</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>4</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <flatMagicDamage>100</flatMagicDamage>
                        <addBuff duration="2">
                            <entity>
                                <continuousEffect>
                                    <entity>
                                        <bonusPercentageWalkSpeed>-0.4</bonusPercentageWalkSpeed>
                                    </entity>
                                </continuousEffect>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>