<template>
    <entity id="unit">
        <name>Jaime</name>
        <!--model-->
        <model>Models/jaime/skin_default.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>Idle</name>
                <loopDuration>8</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>Walk</name>
            </entity>
        </walkAnimation>
        <walkStepDistance>4.5</walkStepDistance>
        <autoAttackAnimation>
            <entity>
                <name>Punches</name>
            </entity>
        </autoAttackAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="0.8"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup group="units" collidesWith="map|units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseMaximumHealth>450</baseMaximumHealth>
        <baseAttackDamage>50</baseAttackDamage>
        <baseAttackSpeed>0.7</baseAttackSpeed>
        <baseArmor>25</baseArmor>
        <baseMagicResistance>30</baseMagicResistance>
        <baseWalkSpeed>5</baseWalkSpeed>
        <inventory>
            <entity template="boots"/>
            <entity template="zhonyas_hourglass"/>
        </inventory>
        <requestUpdateAttributes/>
        <isTargetable/>
        <isVulnerable/>
        <!--spells-->
        <autoAttack>
            <entity template="melee_autoattack"/>
        </autoAttack>
        <spells>
            <entity template="sonic_wave(0)"/>
            <entity template="intervention(#unit)"/>
            <entity template="lunar_rush"/>
            <entity template="dragons_rage"/>
        </spells>
    </entity>
</template>