<template>
    <value name="maximumStacks">3</value>
    <entity id="passive">
        <description>Your basic attacks grant a stack - After reaching [maximumStacks] stacks, the stacks will get removed and your next basic attack will deal 70 magic damage (Can crit).</description>
        <itemAddedEffectTriggers>
            <!--add buff and spelleffect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="-1">
                            <entity id="buff">
                                <buffStacks>
                                    <entity id="buffStacks">
                                        <stacks>0</stacks>
                                        <maximumStacks>[maximumStacks]</maximumStacks>
                                    </entity>
                                </buffStacks>
                                <keepOnDeath/>
                            </entity>
                        </addBuff>
                        <addAutoAttackSpellEffects>
                            <entity id="newSpellEffect1">
                                <castedEffectTriggers>
                                    <!--add stacks-->
                                    <entity>
                                        <customTarget>#buffStacks</customTarget>
                                        <triggeredEffect>
                                            <entity>
                                                <addStacks>1</addStacks>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                </castedEffectTriggers>
                            </entity>
                        </addAutoAttackSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
            <!--add full stacks triggers-->
            <entity>
                <customTarget>#buffStacks</customTarget>
                <triggeredEffect>
                    <entity>
                        <addEffectTriggers>
                            <!--clear stacks-->
                            <entity>
                                <stacksReachedTrigger>[maximumStacks]</stacksReachedTrigger>
                                <sourceTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <clearStacks/>
                                    </entity>
                                </triggeredEffect>
                            </entity>
                            <!--add spelleffect-->
                            <entity>
                                <stacksReachedTrigger>[maximumStacks]</stacksReachedTrigger>
                                <buffTargetsTarget>#buff</buffTargetsTarget>
                                <triggeredEffect>
                                    <entity>
                                        <addAutoAttackSpellEffects>
                                            <entity id="newSpellEffect2">
                                                <castedEffectTriggers>
                                                    <!--target effect-->
                                                    <entity>
                                                        <targetTarget/>
                                                        <triggeredEffect>
                                                            <entity>
                                                                <flatMagicDamage>70</flatMagicDamage>
                                                                <canCrit/>
                                                                <addBuff duration="0.2">
                                                                    <entity>
                                                                        <buffVisualisation>electrified</buffVisualisation>
                                                                    </entity>
                                                                </addBuff>
                                                            </entity>
                                                        </triggeredEffect>
                                                        <triggerSource>#passive</triggerSource>
                                                    </entity>
                                                    <!--remove spelleffect-->
                                                    <entity>
                                                        <casterTarget/>
                                                        <triggeredEffect>
                                                            <entity>
                                                                <removeSpellEffects>#newSpellEffect2</removeSpellEffects>
                                                            </entity>
                                                        </triggeredEffect>
                                                        <triggerSource>#passive</triggerSource>
                                                    </entity>
                                                </castedEffectTriggers>
                                            </entity>
                                        </addAutoAttackSpellEffects>
                                    </entity>
                                </triggeredEffect>
                            </entity>
                        </addEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </itemAddedEffectTriggers>
        <itemRemovedEffectTriggers>
            <!--remove spelleffects-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeBuff>#buff</removeBuff>
                        <removeSpellEffects>#newSpellEffect1,#newSpellEffect2</removeSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </itemRemovedEffectTriggers>
    </entity>
</template>