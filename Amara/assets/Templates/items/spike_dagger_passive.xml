<template>
    <value name="maximumStacks">10</value>
    <entity id="passive">
        <description>Your basic attacks grant a stack (+12% attack speed), up to a maximum of [maximumStacks] stacks. (TODO: The stacks will get removed after 2 seconds of not attacking)</description>
        <itemAddedEffectTriggers>
            <!--add buff and spelleffect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="-1">
                            <entity id="buff">
                                <buffStacks>
                                    <entity id="buffStacks">
                                        <stacks>0</stacks>
                                        <maximumStacks>[maximumStacks]</maximumStacks>
                                    </entity>
                                </buffStacks>
                                <continuousAttributesPerStack>
                                    <entity>
                                        <bonusPercentageAttackSpeed>0.12</bonusPercentageAttackSpeed>
                                    </entity>
                                </continuousAttributesPerStack>
                                <keepOnDeath/>
                            </entity>
                        </addBuff>
                        <addAutoAttackSpellEffects>
                            <entity id="newSpellEffect">
                                <castedEffectTriggers>
                                    <!--add stacks-->
                                    <entity>
                                        <customTarget>#buffStacks</customTarget>
                                        <triggeredEffect>
                                            <entity>
                                                <addStacks>1</addStacks>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                </castedEffectTriggers>
                            </entity>
                        </addAutoAttackSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </itemAddedEffectTriggers>
        <itemRemovedEffectTriggers>
            <!--remove spelleffect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeBuff>#buff</removeBuff>
                        <removeSpellEffects>#newSpellEffect</removeSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </itemRemovedEffectTriggers>
    </entity>
</template>