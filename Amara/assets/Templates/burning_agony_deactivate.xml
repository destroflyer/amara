<template>
    <entity id="spell">
        <name>Deactivate Burning Agony</name>
        <spellVisualisation>burning_agony_deactivate</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--remove buff area-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <removeBuffArea>[1]</removeBuffArea>
                        <removeBuff>[3]</removeBuff>
                        <replaceSpellWithExistingSpell spellIndex="[0]">[2]</replaceSpellWithExistingSpell>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>