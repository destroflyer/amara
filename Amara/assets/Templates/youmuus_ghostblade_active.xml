<template>
    <entity id="spell">
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <baseCooldown>15</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="6">
                            <entity>
                                <continuousEffect>
                                    <entity>
                                        <bonusPercentageAttackSpeed>1</bonusPercentageAttackSpeed>
                                        <bonusPercentageWalkSpeed>0.35</bonusPercentageWalkSpeed>
                                    </entity>
                                </continuousEffect>
                            </entity>
                        </addBuff>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/youmuus_ghostblade_cast.ogg</audio>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>