<template>
    <value name="delay">0.3</value>
    <entity id="spell">
        <name>Splitshot</name>
        <spellVisualisation>erika_splitshot</spellVisualisation>
        <instantEffectTriggers>
            <!--spawn projectiles-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./projectile</spawnTemplate>
                                <spawnRelativeDirection>-45</spawnRelativeDirection>
                                <spawnMovementSpeed>15</spawnMovementSpeed>
                                <spawnMovementRelativeDirection>-45</spawnMovementRelativeDirection>
                            </entity>
                            <entity>
                                <spawnTemplate>./projectile</spawnTemplate>
                                <spawnRelativeDirection>45</spawnRelativeDirection>
                                <spawnMovementSpeed>15</spawnMovementSpeed>
                                <spawnMovementRelativeDirection>45</spawnMovementRelativeDirection>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
            <!--play audio-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/infected_cleaver_cast.ogg</audio>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castDuration>[delay]</castDuration>
        <stopBeforeCasting/>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>shoot_arrow</name>
                <loopDuration>0.5</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>4</baseCooldown>
        <erikaPassiveEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addStun>1</addStun>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </erikaPassiveEffectTriggers>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>40 + (0.3 * source.attackDamage)</physicalDamage>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>