<template>
    <entity id="spell">
        <name>Null Sphere</name>
        <description>Silences an enemy.</description>
        <spellVisualisation>null_sphere</spellVisualisation>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./null_sphere_projectile</spawnTemplate>
                                <spawnMoveToTarget/>
                                <spawnMovementSpeed>25</spawnMovementSpeed>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>0.3</triggerDelay>
            </entity>
            <!--play audio-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/null_sphere_cast.ogg</audio>
                                <audioVolume>0.75</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>0.3</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>single_target</castType>
        <castCancelAction/>
        <castDuration>0.6</castDuration>
        <stopBeforeCasting/>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>cast_1</name>
                <loopDuration>0.6</loopDuration>
            </entity>
        </castAnimation>
        <range>14</range>
        <baseCooldown>9</baseCooldown>
        <spellTargetRules>
            <entity>
                <acceptEnemies/>
            </entity>
        </spellTargetRules>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <magicDamage>80 + (0.7 * source.abilityPower)</magicDamage>
                        <addSilence>2</addSilence>
                        <addBuff duration="2">
                            <entity>
                                <buffVisualisation>electrified</buffVisualisation>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>