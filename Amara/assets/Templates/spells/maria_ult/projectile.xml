<template>
    <entity id="projectile">
        <hitbox>
            <rectangle width="3" height="6"/>
        </hitbox>
        <collisionGroup group="spells" collidesWith="units"/>
        <hitboxActive/>
        <intersectionRules>
            <entity>
                <acceptEnemies/>
            </entity>
        </intersectionRules>
        <isProjectile/>
        <lifetime>1.05</lifetime>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger/>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
                <playAudio>
                    <entity>
                        <audio>Sounds/sounds/spells/maria_ult_hit.ogg</audio>
                    </entity>
                </playAudio>
            </entity>
        </triggeredEffect>
        <triggerSource>#projectile</triggerSource>
    </entity>
</template>