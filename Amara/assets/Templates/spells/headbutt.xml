<template>
    <entity id="spell">
        <name>Lunar Rush</name>
        <spellVisualisation>lunar_rush</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects, play cast audio-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/headbutt_cast.ogg</audio>
                                <audioVolume>0.75</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>single_target</castType>
        <castCancelAction/>
        <castTurnToTarget/>
        <range>14</range>
        <baseCooldown>14</baseCooldown>
        <spellTargetRules>
            <entity>
                <acceptEnemies/>
            </entity>
        </spellTargetRules>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--move to target-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <move>
                            <entity>
                                <targetedMovementTarget/>
                                <movementSpeed>30</movementSpeed>
                            </entity>
                        </move>
                        <addEffectTriggers>
                            <!--target effect, play hit audio-->
                            <entity>
                                <targetReachedTrigger/>
                                <targetTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <flatMagicDamage>110</flatMagicDamage>
                                        <scalingAbilityPowerMagicDamage>0.7</scalingAbilityPowerMagicDamage>
                                        <move>
                                            <entity>
                                                <displacement/>
                                                <sourceMovementDirection/>
                                                <movementSpeed>30</movementSpeed>
                                                <distanceLimit>10</distanceLimit>
                                            </entity>
                                        </move>
                                        <playAudio>
                                            <entity>
                                                <audio>Sounds/sounds/spells/headbutt_hit.ogg</audio>
                                                <audioVolume>0.75</audioVolume>
                                            </entity>
                                        </playAudio>
                                    </entity>
                                </triggeredEffect>
                                <triggerOnce/>
                            </entity>
                            <!--reactivate hitbox-->
                            <entity>
                                <targetReachedTrigger/>
                                <sourceTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <activateHitbox/>
                                    </entity>
                                </triggeredEffect>
                                <triggerOnce/>
                                <triggerOnCancel/>
                            </entity>
                        </addEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>