<template>
    <entity id="spell">
        <name>Resonating Strike</name>
        <spellVisualisation>resonating_strike</spellVisualisation>
        <instantEffectTriggers>
            <!--move to target-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <move>
                            <entity>
                                <movementTarget>[parameter1]</movementTarget>
                                <movementSpeed>18</movementSpeed>
                            </entity>
                        </move>
                        <addEffectTriggers>
                            <entity>
                                <targetReachedTrigger/>
                                <targetTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <triggerSpellEffects>#spell</triggerSpellEffects>
                                    </entity>
                                </triggeredEffect>
                                <triggerSource>#spell</triggerSource>
                                <triggerOnce/>
                            </entity>
                        </addEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <baseCooldown>11</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <flatPhysicalDamage>80</flatPhysicalDamage>
                        <removeBuff>[parameter0]</removeBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>