<template>
    <entity id="object">
        <model>Models/erika_arrow/skin_fire_it_up.xml</model>
        <hitbox>
            <circle radius="1.2"/>
        </hitbox>
        <collisionGroup group="spells" collidesWith="units"/>
        <intersectionRules>
            <entity>
                <acceptEnemies/>
            </entity>
        </intersectionRules>
        <lifetime>1.2</lifetime>
    </entity>
    <!--activate hitbox-->
    <entity>
        <instantTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <activateHitbox/>
                <playAudio>
                    <entity>
                        <audio>Sounds/sounds/spells/erika_e_hit.ogg</audio>
                        <audioVolume>0.75</audioVolume>
                    </entity>
                </playAudio>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
        <triggerDelay>1</triggerDelay>
        <triggerOnce/>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger/>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--remove object-->
    <entity>
        <collisionTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
</template>