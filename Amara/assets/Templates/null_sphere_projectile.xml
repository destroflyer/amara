<template>
    <entity id="projectile">
        <model>Models/cloud/skin.xml</model>
        <isProjectile/>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <targetReachedTrigger/>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
                <playAudio>
                    <entity>
                        <audio>Sounds/sounds/spells/thunder.ogg</audio>
                    </entity>
                </playAudio>
            </entity>
        </triggeredEffect>
        <triggerSource>#projectile</triggerSource>
    </entity>
    <!--remove projectile-->
    <entity>
        <targetReachedTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#projectile</triggerSource>
    </entity>
</template>