<template>
    <entity>
        <name>Pseudospider Tower</name>
        <isMinion/>
        <!--model-->
        <model>Models/pseudospider/skin.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>idle</name>
                <loopDuration>1.5</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>melee_attack</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>death</name>
                <loopDuration>1</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="0.5"/>
        </hitbox>
        <scale>1.5</scale>
        <intersectionPushes/>
        <intersectionPushed/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <isRespawnable/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>2000</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>30</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>1.3</bonusFlatAttackSpeed>
                <bonusFlatArmor>40</bonusFlatArmor>
                <bonusFlatMagicResistance>40</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>6</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isAutoAttackEnabled/>
        <isTargetable/>
        <isVulnerable/>
        <isBindable/>
        <isKnockupable/>
        <isSilencable/>
        <isStunnable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>-1</autoAggro>
    </entity>
</template>