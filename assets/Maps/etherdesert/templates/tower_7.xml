<template>
    <entity>
        <name>Ranged Soldier Tower</name>
        <isMinion/>
        <!--model-->
        <model>Models/3dsa_archer/skin_team_allied.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>idle</name>
                <loopDuration>2</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>shoot_arrow</name>
            </entity>
        </autoAttackAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <scale>0.75</scale>
        <intersectionPushes/>
        <intersectionPushed/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <isRespawnable/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>310</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>23</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>0.7</bonusFlatAttackSpeed>
                <bonusFlatArmor>10</bonusFlatArmor>
                <bonusFlatMagicResistance>10</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>4</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isAutoAttackEnabled/>
        <isTargetable/>
        <isVulnerable/>
        <isBindable/>
        <isKnockupable/>
        <isSilencable/>
        <isStunnable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/ranged_autoattack,Models/3dsa_archer_arrow/skin.xml"/>
        </autoAttack>
        <autoAggro>-1</autoAggro>
    </entity>
</template>