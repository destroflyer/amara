<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml"/>
    <useStyles filename="Interface/styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    <screen id="start" controller="amara.applications.ingame.client.gui.ScreenController_Shop">
        <layer childLayout="absolute">
            <control id="shop_window" name="window" title="Shop" x="50px" y="50px" width="1152px" height="670px" hideOnClose="true" visible="false">
                <panel childLayout="horizontal" width="100%" height="100%" backgroundColor="#000A">
                    <panel childLayout="vertical" width="200px" backgroundColor="#0003">
                        <panel height="10px"/>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="search" name="textfield" width="170px"/>
                            <panel width="20px"/>
                        </panel>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_0" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="All Items" font="Interface/fonts/Verdana_14.fnt" height="23px" checked="true"/>
                        </panel>
                        <panel childLayout="horizontal" height="2px">
                            <panel width="10px"/>
                            <panel backgroundColor="#444F"/>
                        </panel>
                        <panel childLayout="horizontal" height="9px"/>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_1" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Attack Damage" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_2" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Attack Speed" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_3" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Critical Chance" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_4" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Lifesteal" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="2px">
                            <panel width="10px"/>
                            <panel backgroundColor="#444F"/>
                        </panel>
                        <panel childLayout="horizontal" height="9px"/>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_5" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Ability Power" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_6" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Cooldown Speed" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_7" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Mana" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_8" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Mana Regeneration" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="2px">
                            <panel width="10px"/>
                            <panel backgroundColor="#444F"/>
                        </panel>
                        <panel childLayout="horizontal" height="9px"/>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_9" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Health" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_10" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Health Regeneration" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_11" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Armor" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_12" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Magic Resistance" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="2px">
                            <panel width="10px"/>
                            <panel backgroundColor="#444F"/>
                        </panel>
                        <panel childLayout="horizontal" height="9px"/>
                        <panel childLayout="horizontal" height="32px">
                            <panel width="10px"/>
                            <control id="shop_item_filter_checkbox_13" name="checkbox"/>
                            <panel width="6px"/>
                            <text text="Walk Speed" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                        </panel>
                        <panel childLayout="horizontal" height="55px">
                            <panel width="10px"/>
                            <panel childLayout="vertical">
                                <text text="Sell Item" font="Interface/fonts/Verdana_14.fnt" height="23px"/>
                                <panel childLayout="horizontal">
                                    <control id="sell_item_button_0" name="button" width="32px" height="32px">
                                        <interact onClick="sellItem(0)"/>
                                    </control>
                                    <control id="sell_item_button_1" name="button" width="32px" height="32px">
                                        <interact onClick="sellItem(1)"/>
                                    </control>
                                    <control id="sell_item_button_2" name="button" width="32px" height="32px">
                                        <interact onClick="sellItem(2)"/>
                                    </control>
                                </panel>
                                <panel childLayout="horizontal">
                                    <control id="sell_item_button_3" name="button" width="32px" height="32px">
                                        <interact onClick="sellItem(3)"/>
                                    </control>
                                    <control id="sell_item_button_4" name="button" width="32px" height="32px">
                                        <interact onClick="sellItem(4)"/>
                                    </control>
                                    <control id="sell_item_button_5" name="button" width="32px" height="32px">
                                        <interact onClick="sellItem(5)"/>
                                    </control>
                                </panel>
                            </panel>
                        </panel>
                        <panel height="10px"/>
                    </panel>
                    <panel width="2px" backgroundColor="#444F"/>
                    <panel childLayout="vertical" width="580px">
                        <panel childLayout="absolute" height="43px">
                            <text x="19px" y="13px" text="Select an item to see what it does and how to build it" font="Interface/fonts/Verdana_14.fnt"/>
                        </panel>
                        <panel childLayout="horizontal">
                            <panel width="20px"/>
                            <panel id="shop_available_items_container" childLayout="center">
                                <!--Generated Panel "shop_available_items"-->
                            </panel>
                            <panel width="20px"/>
                        </panel>
                    </panel>
                    <panel width="2px" backgroundColor="#444F"/>
                    <panel id="item_details" childLayout="vertical" width="352px">
                        <panel childLayout="absolute" height="43px">
                            <text x="19px" y="13px" text="Builds Into" font="Interface/fonts/Verdana_14.fnt"/>
                        </panel>
                        <panel id="builds_into_container" childLayout="center" height="45px">
                            <!--Generated panel "builds_into"-->
                        </panel>
                        <panel childLayout="absolute" height="43px">
                            <text x="19px" y="13px" text="Recipe" font="Interface/fonts/Verdana_14.fnt"/>
                        </panel>
                        <panel id="shop_item_information_recipe" childLayout="absolute" width="100%" backgroundColor="#000C"/>
                        <panel childLayout="horizontal" width="100%" height="208px" backgroundColor="#000A">
                            <panel width="20px"/>
                            <panel childLayout="vertical">
                                <panel height="10px"/>
                                <panel childLayout="horizontal" height="45px">
                                    <image id="item_details_image" width="45px" height="45px" backgroundColor="#F00F" visibleToMouse="true"/>
                                    <panel width="9px"/>
                                    <panel childLayout="vertical">
                                        <panel height="3px"/>
                                        <text id="item_details_name" text="???" font="Interface/fonts/Verdana_14.fnt" textHAlign="left"/>
                                        <panel height="4px"/>
                                        <panel childLayout="horizontal">
                                            <image filename="Interface/hud/gold.png" width="15px" height="15px"/>
                                            <panel width="4px"/>
                                            <text id="item_details_gold" text="???" font="Interface/fonts/Verdana_12.fnt" textHAlign="left"/>
                                        </panel>
                                    </panel>
                                    <panel childLayout="vertical" width="100px">
                                        <panel height="5px"/>
                                        <control id="buy" name="button" width="100px" height="35px" label="Buy">
                                            <interact onClick="buySelectedItem()"/>
                                        </control>
                                        <panel height="5px"/>
                                    </panel>
                                </panel>
                                <panel height="10px"/>
                                <text id="item_details_description" text="???" font="Interface/fonts/Verdana_14.fnt" width="100%" textHAlign="left" textVAlign="top" wrap="true"/>
                            </panel>
                            <panel width="10px"/>
                        </panel>
                    </panel>
                </panel>
            </control>
        </layer>
    </screen>
    <screen id="cinematic" controller="amara.applications.ingame.client.gui.ScreenController_Cinematic">
    </screen>
</nifty>