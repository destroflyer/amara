<template>
    <entity id="spell">
        <name>Kunai Vortex</name>
        <description>Summon circular rotating kunais around you, which destroy enemy projectiles.</description>
        <spellVisualisation>scarlet_barrier</spellVisualisation>
        <instantEffectTriggers>
            <!--spawn object, play audio-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object([unit])</spawnTemplate>
                            </entity>
                        </spawn>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/scarlet_barrier_cast.ogg</audio>
                                <audioVolume>0.75</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <castCost>
            <entity>
                <manaCost>80</manaCost>
            </entity>
        </castCost>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--remove target projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <removeEntity/>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--add mark buff to target projectile caster-->
            <entity>
                <targetCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="3">[markBuff]</addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>