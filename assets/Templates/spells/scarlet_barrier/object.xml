<template>
    <entity id="object">
        <model>Models/scarlet_barrier/skin.xml</model>
        <transformOrigin>[unit]</transformOrigin>
        <hitbox>
            <circle radius="2.5"/>
        </hitbox>
        <collisionGroup targetOf="spells" targets="spell_targets"/>
        <hitboxActive/>
        <lifetime>[duration]</lifetime>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger>
            <entity>
                <requireProjectile/>
                <acceptEnemies/>
            </entity>
        </collisionTrigger>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
                <playAudio>
                    <entity>
                        <audio>Sounds/sounds/spells/scarlet_barrier_block.ogg</audio>
                        <audioVolume>1.5</audioVolume>
                    </entity>
                </playAudio>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
</template>