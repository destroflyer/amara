<template>
    <entity id="object">
        <name>Tombstone</name>
        <!--model-->
        <model>Models/tombstone/skin_dosaz_passive.xml</model>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <lifetime>30</lifetime>
    </entity>
    <!--spawn and remove on collision trigger-->
    <entity>
        <collisionTrigger>
            <entity>
                <acceptUntargetable/>
                <requireAllBuffs>[triggerTombstonesBuff]</requireAllBuffs>
            </entity>
        </collisionTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <spawn>
                    <entity>
                        <spawnTemplate>./unit</spawnTemplate>
                        <spawnBuffs>[ghostBuff]</spawnBuffs>
                    </entity>
                </spawn>
                <playAudio>
                    <entity>
                        <audio>Sounds/sounds/spells/dosaz_passive_unit_spawn.ogg</audio>
                    </entity>
                </playAudio>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
        <triggerOnce>true</triggerOnce>
    </entity>
</template>