<template>
    <values>
        <delay>0.2</delay>
        <stunDuration>1.5</stunDuration>
    </values>
    <entity id="spell">
        <name>Knockback</name>
        <description>Knockbacks and damages all enemies in front of you - If they collide with a wall, they take additional damage and are stunned for [stunDuration] seconds.</description>
        <spellVisualisation>tristan_ult</spellVisualisation>
        <instantEffectTriggers>
            <!--spawn object-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object</spawnTemplate>
                            </entity>
                        </spawn>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/tristan_ult_cast.ogg</audio>
                                <audioVolume>4</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castCost>
            <entity>
                <manaCost>100</manaCost>
            </entity>
        </castCost>
        <castAnimation>
            <entity>
                <name>slash4</name>
                <loopDuration>0.352</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>100 + (0.3 * source.attackDamage)</physicalDamage>
                        <move>
                            <entity>
                                <displacement/>
                                <sourceMovementDirection/>
                                <movementSpeed>30</movementSpeed>
                                <distanceLimit>10</distanceLimit>
                            </entity>
                        </move>
                        <addNewEffectTriggers>./triggers/collision_trigger([stunDuration]),./triggers/remove_collision_trigger</addNewEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>