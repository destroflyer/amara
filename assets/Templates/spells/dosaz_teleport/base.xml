<template>
    <value name="delay">0.7</value>
    <entity id="spell">
        <name>Swap</name>
        <description>Swap places with a ghost.</description>
        <spellVisualisation>dosaz_teleport</spellVisualisation>
        <instantEffectTriggers>
            <!--add buffs-->
            <entity>
                <sourceCasterTarget/>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="[delay]">
                            <entity id="buff">
                                <name>Burner</name>
                                <description>This unit will teleport soon.</description>
                                <buffIcon>spells/dosaz_teleport</buffIcon>
                                <buffVisualisation>dosaz_teleport</buffVisualisation>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--play audio-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/dosaz_teleport_cast.ogg</audio>
                                <audioVolume>2</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--trigger spell effects-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>single_target</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castCost>
            <entity>
                <manaCost>80</manaCost>
            </entity>
        </castCost>
        <castAnimation>
            <entity>
                <name>spell7</name>
                <loopDuration>1.4</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>1</baseCooldown>
        <spellTargetRules>
            <entity>
                <acceptAllies/>
                <requireAllBuffs>[parameter1]</requireAllBuffs>
            </entity>
        </spellTargetRules>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--swap positions-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <swapPositions>[parameter0]</swapPositions>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>