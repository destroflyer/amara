<template>
    <entity id="spell">
        <name>Riftwalk</name>
        <description>Teleports to the target location.</description>
        <spellVisualisation>riftwalk_1</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>0.25</triggerDelay>
            </entity>
            <!--play audio-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Audio/sounds/spells/riftwalk_cast.ogg</audio>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>positional_skillshot</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>0.5</castDuration>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>pop</name>
                <loopDuration>0.5</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>3</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--teleport-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <teleportToTargetPosition/>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>