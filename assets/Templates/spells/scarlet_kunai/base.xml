<template>
    <value name="delay">0.15</value>
    <entity id="spell">
        <name>Kunai Throw</name>
        <description>Throws a kunai, which deals physical damage to the first target hit.</description>
        <spellVisualisation>scarlet_kunai</spellVisualisation>
        <spellIndicator>
            <entity>
                <linearIndicator width="2" height="19.5"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./projectile</spawnTemplate>
                                <spawnMovementSpeed>28</spawnMovementSpeed>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
            <!--play audio-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/scarlet_kunai_cast.ogg</audio>
                                <audioVolume>1.5</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castCost>
            <entity>
                <manaCost>40</manaCost>
            </entity>
        </castCost>
        <castAnimation>
            <entity>
                <name>throw</name>
                <loopDuration>0.75</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="3">[parameter0]</addBuff>
                        <magicDamage>90 + (0.5 * source.abilityPower)</magicDamage>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>