<template>
    <value name="duration">5</value>
    <entity id="spell">
        <name>Arrowhead Enchantment</name>
        <description>For the next [duration] seconds, your basic attacks and spells deal additional magic damage and slow enemies.</description>
        <spellVisualisation>elven_archer_buff</spellVisualisation>
        <instantEffectTriggers>
            <!--reset autoattack cooldown-->
            <entity>
                <customTarget>[parameter0]</customTarget>
                <triggeredEffect>
                    <entity>
                        <resetCooldown/>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--trigger spell effects-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--add spelleffects-->
            <entity>
                <customTarget>[parameter0],[parameter1],[parameter2]</customTarget>
                <triggeredEffect>
                    <entity>
                        <addSpellSpellEffects>
                            <entity id="newSpellEffect">
                                <castedEffectTriggers>
                                    <!--target effect-->
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <magicDamage>50 + (0.1 * source.abilityPower)</magicDamage>
                                                <addBuff duration="2">
                                                    <entity>
                                                        <name>Stuck Arrowhead</name>
                                                        <description>This unit has decreased walk speed.</description>
                                                        <buffIcon>spells/elven_archer_buff</buffIcon>
                                                        <buffVisualisation>slow</buffVisualisation>
                                                        <continuousAttributes>
                                                            <entity>
                                                                <bonusPercentageWalkSpeed>-0.3</bonusPercentageWalkSpeed>
                                                            </entity>
                                                        </continuousAttributes>
                                                    </entity>
                                                </addBuff>
                                                <customCleanup/>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </castedEffectTriggers>
                            </entity>
                        </addSpellSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--add buff-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="[duration]">
                            <entity id="buff">
                                <name>Enchanted Arrowheads</name>
                                <description>This units basic attacks and spells deal additional magic damage and slow enemies.</description>
                                <buffIcon>spells/elven_archer_buff</buffIcon>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <removeSpellEffects>#newSpellEffect</removeSpellEffects>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>