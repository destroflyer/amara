<template>
    <entity id="object">
        <name>Bubble Glitter</name>
        <model>Models/bubble_glitter/skin.xml</model>
        <hitbox>
            <circle radius="3"/>
        </hitbox>
        <collisionGroup targetOf="spells" targets="spell_targets"/>
        <hitboxActive/>
        <sightRange>10</sightRange>
        <lifetime>5</lifetime>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger>
            <entity id="collisionRules">
                <acceptEnemies/>
            </entity>
        </collisionTrigger>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <magicDamage>100 + (0.3 * source.abilityPower)</magicDamage>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--deactivate hitbox-->
    <entity>
        <collisionTrigger>#collisionRules</collisionTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <deactivateHitbox/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--audio - pop-->
    <entity>
        <audio>Sounds/sounds/spells/alice_passive_pop.ogg</audio>
        <audioVolume>2</audioVolume>
        <audioRemoveAfterPlaying/>
        <audioSource>#object</audioSource>
        <startPlayingAudio/>
    </entity>
    <!--audio - loop-->
    <entity>
        <audio>Sounds/sounds/spells/alice_passive_loop.ogg</audio>
        <audioRemoveAfterPlaying/>
        <audioSource>#object</audioSource>
        <startPlayingAudio/>
    </entity>
</template>