<template>
    <value name="castDuration">5</value>
    <entity id="spell">
        <name>Recovery</name>
        <description>Channels for [castDuration] seconds, regenerating 400 health. Can be cancelled and will be interrupted by damage.</description>
        <spellVisualisation>recovery</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <castCancelAction/>
        <castCancelable/>
        <castDuration>[castDuration]</castDuration>
        <baseCooldown>210</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--add buff-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="-1">
                            <entity id="buff">
                                <name>Recovering</name>
                                <description>This unit has increased health regeneration.</description>
                                <buffIcon>spells/recovery</buffIcon>
                                <buffVisualisation>meditating</buffVisualisation>
                                <continuousAttributes>
                                    <entity>
                                        <bonusFlatHealthRegeneration>80</bonusFlatHealthRegeneration>
                                    </entity>
                                </continuousAttributes>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <!--delay by 1 frame to make sure, the buff isn't removed when recasting-->
                <triggerDelay>0</triggerDelay>
            </entity>
            <!--play audio, add triggers-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity id="loopAudio">
                                <audio>Sounds/sounds/spells/recovery_loop.ogg</audio>
                                <audioLoop/>
                            </entity>
                        </playAudio>
                        <addEffectTriggers>
                            <!--cancel on damage-->
                            <entity id="damageTakenTrigger">
                                <damageTakenTrigger physicalDamage="true" magicalDamage="true" trueDamage="true"/>
                                <sourceCasterTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <cancelAction/>
                                    </entity>
                                </triggeredEffect>
                            </entity>
                            <!--cleanup-->
                            <entity>
                                <castingFinishedTrigger/>
                                <sourceCasterTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <removeBuff>#buff</removeBuff>
                                        <removeEffectTriggers>#damageTakenTrigger</removeEffectTriggers>
                                        <stopAudio>#loopAudio</stopAudio>
                                    </entity>
                                </triggeredEffect>
                                <triggerOnce/>
                                <triggerOnCancel/>
                            </entity>
                        </addEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>