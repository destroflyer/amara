<template>
    <entity id="spell">
        <name>Smash</name>
        <description>After a small delay, smashes your sword down, damaging and stunning all enemies in front of you.</description>
        <spellVisualisation>tristan_stun</spellVisualisation>
        <spellIndicator>
            <entity>
                <linearIndicator width="3" height="9"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn object-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object</spawnTemplate>
                            </entity>
                        </spawn>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/tristan_stun_cast.ogg</audio>
                                <audioVolume>3</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castDuration>0.5</castDuration>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>spell2</name>
                <loopDuration>0.7</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>100 + (0.5 * source.attackDamage)</physicalDamage>
                        <addStun>1.25</addStun>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>