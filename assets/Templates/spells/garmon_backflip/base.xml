<template>
    <entity id="spell">
        <name>Moon Jump</name>
        <description>Garmon makes a backflip, jumping a short distance in the opposite direction, that he is facing.</description>
        <spellVisualisation>garmon_backflip</spellVisualisation>
        <spellIndicator>
            <entity>
                <linearIndicator y="-8" width="2" height="8"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/garmon_backflip_cast.ogg</audio>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>0.5</castDuration>
        <castCost>
            <entity>
                <manaCost>70</manaCost>
            </entity>
        </castCost>
        <baseCooldown>9</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <move>
                            <entity>
                                <targetedMovementDirection>180</targetedMovementDirection>
                                <movementSpeed>16</movementSpeed>
                                <movementAnimation>
                                    <entity>
                                        <name>backflip</name>
                                        <loopDuration>1</loopDuration>
                                    </entity>
                                </movementAnimation>
                                <distanceLimit>8</distanceLimit>
                            </entity>
                        </move>
                        <removeCollisionGroups targetOf="map|units" targets="units"/>
                        <addEffectTriggers>
                            <!--readd collisiongroups-->
                            <entity>
                                <targetReachedTrigger/>
                                <sourceTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <addCollisionGroups targetOf="map|units" targets="units"/>
                                    </entity>
                                </triggeredEffect>
                                <triggerOnce/>
                                <triggerOnCancel/>
                            </entity>
                        </addEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>