<template>
    <value name="delay">1.5</value>
    <value name="bindDuration">1</value>
    <entity id="spell">
        <name>Feel the Drawback</name>
        <description>After [delay] seconds, Erika shoots a great number of arrows to the target location. All enemies hit will be damaged and binded for [bindDuration] second.</description>
        <spellVisualisation>erika_feel_the_drawback</spellVisualisation>
        <instantEffectTriggers>
            <!--spawn object-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object</spawnTemplate>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
            <!--play cast audio-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/erika_r_cast.ogg</audio>
                                <audioVolume>0.75</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--play hit audio-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/erika_r_hit.ogg</audio>
                                <audioVolume>0.75</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>positional_skillshot</castType>
        <castCancelAction/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>shoot_arrow</name>
                <loopDuration>3</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>120</baseCooldown>
        <spellRequiredLevel>6</spellRequiredLevel>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>250 + (0.7 * source.attackDamage)</physicalDamage>
                        <addBinding>[bindDuration]</addBinding>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>