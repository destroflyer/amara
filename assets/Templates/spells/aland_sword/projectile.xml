<template>
    <entity id="projectile">
        <isProjectile/>
        <model>Models/aland_sword/skin_slow.xml</model>
        <hitbox>
            <point/>
        </hitbox>
        <hitboxActive/>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <targetReachedTrigger/>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
                <playAudio>
                    <entity>
                        <audio>Sounds/sounds/spells/aland_sword_hit.ogg</audio>
                        <audioVolume>1.5</audioVolume>
                        <audioRemoveAfterPlaying/>
                    </entity>
                </playAudio>
            </entity>
        </triggeredEffect>
        <triggerSource>#projectile</triggerSource>
    </entity>
    <!--remove projectile-->
    <entity>
        <targetReachedTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#projectile</triggerSource>
    </entity>
</template>