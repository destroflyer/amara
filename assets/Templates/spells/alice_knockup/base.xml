<template>
    <value name="delay">0.25</value>
    <value name="duration">1.5</value>
    <entity id="spell">
        <name>Ascending Bubble</name>
        <description>Shoot a white bubble to the target location, which lies around for 6 seconds if not hitting anything. The first enemy colliding with the bubble will catch it, receiving magic damage and being knockuped for a short duration.</description>
        <spellVisualisation>alice_knockup</spellVisualisation>
        <spellIndicator>
            <entity>
                <linearIndicator width="2" height="19.5"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./projectile</spawnTemplate>
                                <spawnMoveToTarget/>
                                <spawnMovementSpeed>20</spawnMovementSpeed>
                                <spawnBuffs>[parameter0]</spawnBuffs>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
            <!--play audio-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/alice_knockup_cast.ogg</audio>
                                <audioVolume>2</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>positional_skillshot</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castCost>
            <entity>
                <manaCost>50</manaCost>
            </entity>
        </castCost>
        <castAnimation>
            <entity>
                <name>spell3</name>
                <loopDuration>0.825</loopDuration>
            </entity>
        </castAnimation>
        <range type="center_to_center" distance="20"/>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <magicDamage>120 + (0.5 * source.abilityPower)</magicDamage>
                        <addKnockup>
                            <entity>
                                <knockupDuration>[duration]</knockupDuration>
                                <knockupHeight>4</knockupHeight>
                            </entity>
                        </addKnockup>
                        <addBuff duration="[duration]">
                            <entity>
                                <name>Bubbled</name>
                                <description>This unit is caught in a bubble.</description>
                                <buffIcon>spells/alice_knockup</buffIcon>
                                <buffVisualisation>bubble_white</buffVisualisation>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <spawn>
                                                    <entity>
                                                        <spawnTemplate>spells/alice_passive/object</spawnTemplate>
                                                    </entity>
                                                </spawn>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>