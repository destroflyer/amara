<template>
    <values>
        <duration>3</duration>
    </values>
    <entity id="spell">
        <name>Stealth</name>
        <description>Gain stealth and a walk speed buff for a short duration. The stealth ends instantly when casting a basic attack or spell.</description>
        <spellVisualisation>aland_stealth</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/aland_stealth_cast.ogg</audio>
                                <audioVolume>6</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <castCost>
            <entity>
                <manaCost>50</manaCost>
            </entity>
        </castCost>
        <baseCooldown>10</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--add buff-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="[duration]">
                            <entity id="buff">
                                <name>Stealthy</name>
                                <description>This unit is stealthed.</description>
                                <buffIcon>spells/aland_stealth</buffIcon>
                                <continuousAttributes>
                                    <entity>
                                        <bonusPercentageWalkSpeed>0.3</bonusPercentageWalkSpeed>
                                    </entity>
                                </continuousAttributes>
                                <onBuffAddEffectTriggers>
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addStealth/>
                                                <removeCollisionGroups targetOf="units" targets="units"/>
                                                <addEffectTriggers>
                                                    <!--remove buff-->
                                                    <entity id="castingStartedTrigger">
                                                        <castingStartedTrigger/>
                                                        <sourceTarget/>
                                                        <triggeredEffect>
                                                            <entity>
                                                                <removeBuff>#buff</removeBuff>
                                                            </entity>
                                                        </triggeredEffect>
                                                        <triggerOnce/>
                                                    </entity>
                                                </addEffectTriggers>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffAddEffectTriggers>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <removeStealth/>
                                                <addCollisionGroups targetOf="units" targets="units"/>
                                                <removeEffectTriggers>#castingStartedTrigger</removeEffectTriggers>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>