<template>
    <value name="duration">3</value>
    <entity id="passive">
        <name>Stone Skin</name>
        <description>Gain 3% of all taken damage as armor and magic resistance for [duration] seconds.</description>
        <spellVisualisation>maw_passive</spellVisualisation>
        <passiveAddedEffectTriggers>
            <!--add trigger-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <addEffectTriggers>
                            <!--gain resistances-->
                            <entity id="damageTakenTrigger">
                                <damageTakenTrigger physicalDamage="true" magicDamage="true" trueDamage="true"/>
                                <sourceTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <addNewBuff templateExpression="&quot;spells/maw_passive/buff(&quot; + (0.03 * totalDamage) + &quot;)&quot;" duration="[duration]"/>
                                    </entity>
                                </triggeredEffect>
                            </entity>
                        </addEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveAddedEffectTriggers>
        <passiveRemovedEffectTriggers>
            <!--remove trigger-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeEffectTriggers>#damageTakenTrigger</removeEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveRemovedEffectTriggers>
    </entity>
</template>