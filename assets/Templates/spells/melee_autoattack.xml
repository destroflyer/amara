<template>
    <values>
        <soundHit>Sounds/sounds/spells/melee_autoattack_cast.ogg</soundHit>
    </values>
    <entity id="spell">
        <name>Melee Autoattack</name>
        <instantEffectTriggers>
            <!--trigger spell effects, play audio-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                        <playAudio>
                            <entity>
                                <audio>[soundHit]</audio>
                                <audioVolume>0.75</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>single_target</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castCancelable/>
        <castTurnToTarget/>
        <range type="edge_to_edge" distance="2"/>
        <spellTargetRules>
            <entity>
                <acceptEnemies/>
            </entity>
        </spellTargetRules>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>1 * source.attackDamage</physicalDamage>
                        <canCrit/>
                        <drawTeamAggro>15</drawTeamAggro>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>