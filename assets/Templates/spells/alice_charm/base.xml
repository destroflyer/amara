<template>
    <value name="delay">0.25</value>
    <value name="duration">1.5</value>
    <entity id="spell">
        <name>Charming Bubble</name>
        <description>Shoot a pink bubble to the target location, which lies around for 6 seconds if not hitting anything. When colliding with an enemy, all near enemies receive magic damage and are charmed.</description>
        <spellVisualisation>alice_charm</spellVisualisation>
        <spellIndicator>
            <entity>
                <linearIndicator width="2" height="19.5"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./projectile</spawnTemplate>
                                <spawnMoveToTarget/>
                                <spawnMovementSpeed>20</spawnMovementSpeed>
                                <spawnBuffs>[thunderPoppableBuff]</spawnBuffs>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
            <!--play audio-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/alice_charm_cast.ogg</audio>
                                <audioVolume>4</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>positional_skillshot</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castCost>
            <entity>
                <manaCost>60</manaCost>
            </entity>
        </castCost>
        <castAnimation>
            <entity>
                <name>spell6</name>
                <loopDuration>0.533</loopDuration>
            </entity>
        </castAnimation>
        <range type="center_to_center" distance="20"/>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <magicDamage>80 + (0.3 * source.abilityPower)</magicDamage>
                        <move>
                            <entity>
                                <displacement/>
                                <sourceMovementTarget/>
                                <movementSpeed>1.5</movementSpeed>
                            </entity>
                        </move>
                        <addBuff duration="[duration]">
                            <entity>
                                <name>Charmed</name>
                                <description>This unit is in love and can't help but move towards its desire.</description>
                                <buffIcon>spells/alice_charm</buffIcon>
                                <buffVisualisation>charm</buffVisualisation>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <stop/>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>