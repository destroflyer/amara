<template>
    <values>
        <duration>0.4</duration>
    </values>
    <entity id="spell">
        <name>Spin</name>
        <description>Spins your sword in a circle, dealing damage to all enemies and healing for every character hit.</description>
        <spellVisualisation>tristan_spin</spellVisualisation>
        <spellIndicator>
            <entity>
                <circularIndicator radius="6"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn object, add visual buff-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object([unit])</spawnTemplate>
                            </entity>
                        </spawn>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/tristan_spin_cast.ogg</audio>
                                <audioVolume>7</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <castDuration>[duration]</castDuration>
        <castCancelCast/>
        <castCost>
            <entity>
                <manaCost>50</manaCost>
            </entity>
        </castCost>
        <castAnimation>
            <entity>
                <name>spin</name>
                <loopDuration>[duration]</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <magicDamage>80 + (0.5 * source.abilityPower)</magicDamage>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--target effect-->
            <entity>
                <sourceCasterTarget/>
                <triggerConditions>
                    <entity>
                        <targetTarget/>
                        <isCharacterCondition/>
                    </entity>
                </triggerConditions>
                <triggeredEffect>
                    <entity>
                        <heal>100</heal>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>