<template>
    <entity id="object">
        <model>Models/tristan_spin/skin.xml</model>
        <transformOrigin>[parameter0]</transformOrigin>
        <hitbox>
            <circle radius="6"/>
        </hitbox>
        <collisionGroup targetOf="spells" targets="spell_targets"/>
        <hitboxActive/>
        <lifetime>0.4</lifetime>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger>
            <entity id="collisionRules">
                <acceptEnemies/>
            </entity>
        </collisionTrigger>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--deactivate hitbox-->
    <entity>
        <collisionTrigger>#collisionRules</collisionTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <deactivateHitbox/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
</template>