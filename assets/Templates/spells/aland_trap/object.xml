<template>
    <value name="duration">1</value>
    <value name="moveTriggerDistance">0.75</value>
    <entity id="object">
        <model>Models/bear_trap/skin.xml</model>
        <animation>
            <entity>
                <name>open</name>
                <loopDuration>0.5</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </animation>
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <collisionGroup targetOf="spells" targets="spell_targets"/>
        <sightRange>3</sightRange>
        <lifetime>180</lifetime>
    </entity>
    <!--activate hitbox-->
    <entity>
        <instantTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <activateHitbox/>
                <addStealth/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
        <triggerDelay>0.5</triggerDelay>
        <triggerOnce/>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger>
            <entity id="collisionRules">
                <acceptEnemies/>
            </entity>
        </collisionTrigger>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerSpellEffects>[parameter0]</triggerSpellEffects>
                <addBuff duration="[duration]">
                    <entity id="buff">
                        <name>Caught</name>
                        <description>This unit has decreased walk speed and will receive a further slow and damage when moving.</description>
                        <buffIcon>spells/aland_trap</buffIcon>
                        <continuousAttributesPerStack>
                            <entity>
                                <bonusPercentageWalkSpeed>-0.5</bonusPercentageWalkSpeed>
                            </entity>
                        </continuousAttributesPerStack>
                        <onBuffRemoveEffectTriggers>
                            <entity>
                                <customTarget>#buff,#movementTrigger1,#movementTrigger2</customTarget>
                                <triggeredEffect>
                                    <entity>
                                        <removeEntity/>
                                    </entity>
                                </triggeredEffect>
                                <triggerSource>[parameter0]</triggerSource>
                            </entity>
                        </onBuffRemoveEffectTriggers>
                        <customCleanup/>
                    </entity>
                </addBuff>
                <addStacks stacks="1">#buff</addStacks>
                <addEffectTriggers>
                    <!--refresh buff and add stack-->
                    <entity id="movementTrigger1">
                        <movementTrigger>[moveTriggerDistance]</movementTrigger>
                        <sourceTarget/>
                        <triggeredEffect>
                            <entity>
                                <triggerSpellEffects>[parameter0]</triggerSpellEffects>
                                <addBuff duration="[duration]">#buff</addBuff>
                                <addStacks stacks="1">#buff</addStacks>
                                <addEffectTriggers>
                                    <!--refresh buff and add stack-->
                                    <entity id="movementTrigger2">
                                        <movementTrigger>[moveTriggerDistance]</movementTrigger>
                                        <sourceTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <triggerSpellEffects>[parameter0]</triggerSpellEffects>
                                                <addBuff duration="[duration]">#buff</addBuff>
                                                <addStacks stacks="1">#buff</addStacks>
                                                <playAudio>
                                                    <entity>
                                                        <audio>Sounds/sounds/spells/aland_trap_hit_following.ogg</audio>
                                                        <audioRemoveAfterPlaying/>
                                                    </entity>
                                                </playAudio>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerOnce>true</triggerOnce>
                                        <customCleanup/>
                                    </entity>
                                </addEffectTriggers>
                                <playAudio>
                                    <entity>
                                        <audio>Sounds/sounds/spells/aland_trap_hit_following.ogg</audio>
                                        <audioRemoveAfterPlaying/>
                                    </entity>
                                </playAudio>
                            </entity>
                        </triggeredEffect>
                        <triggerOnce>true</triggerOnce>
                        <customCleanup/>
                    </entity>
                </addEffectTriggers>
                <playAudio>
                    <entity>
                        <audio>Sounds/sounds/spells/aland_trap_hit_initial.ogg</audio>
                        <audioRemoveAfterPlaying/>
                    </entity>
                </playAudio>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--deactivate hitbox-->
    <entity>
        <collisionTrigger>#collisionRules</collisionTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <deactivateHitbox/>
                <removeStealth/>
                <playAnimation>
                    <entity>
                        <name>close</name>
                        <loopDuration>0.25</loopDuration>
                        <freezeAfterPlaying/>
                    </entity>
                </playAnimation>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--remove object-->
    <entity>
        <collisionTrigger>#collisionRules</collisionTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
        <triggerDelay>0.5</triggerDelay>
    </entity>
</template>