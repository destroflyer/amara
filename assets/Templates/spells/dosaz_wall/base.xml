<template>
    <value name="delay">0.22</value>
    <entity id="spell">
        <name>Bone Wall</name>
        <description>Summons a curved bone wall at the target position and triggers all nearby tombstones around it.</description>
        <spellVisualisation>dosaz_wall</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>positional_skillshot</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>spell5</name>
                <loopDuration>0.66</loopDuration>
            </entity>
        </castAnimation>
        <range type="center_to_center" distance="20"/>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--spawn object-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object_trigger</spawnTemplate>
                                <spawnBuffs>[parameter0]</spawnBuffs>
                            </entity>
                            <entity>
                                <spawnTemplate>./object_visual</spawnTemplate>
                            </entity>
                            <entity>
                                <spawnTemplate>./object_wall_part(0)</spawnTemplate>
                            </entity>
                            <entity>
                                <spawnTemplate>./object_wall_part(1)</spawnTemplate>
                            </entity>
