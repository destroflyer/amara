<template>
    <value name="delay">0.5</value>
    <value name="duration">15</value>
    <entity id="spell">
        <name>Power From the Beyond</name>
        <description>Spawn 5 ghosts in a circle around you, gain health, spellvamp and an aura, that constantly deals magic damage to nearby enemies and slows them.</description>
        <spellVisualisation>dosaz_ult</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <castCancelAction/>
        <castDuration>[delay]</castDuration>
        <castAnimation>
            <entity>
                <name>spell6</name>
                <loopDuration>1</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--add buff, add buff area, spawn units-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="[duration]">
                            <entity id="visualisationBuff">
                                <name>Power From the Beyond</name>
                                <description>This unit has increased spellvamp.</description>
                                <buffIcon>spells/dosaz_ult</buffIcon>
                                <buffVisualisation>dosaz_ult</buffVisualisation>
                                <continuousAttributes>
                                    <entity>
                                        <bonusPercentageSpellvamp>0.2</bonusPercentageSpellvamp>
                                    </entity>
                                </continuousAttributes>
                            </entity>
                        </addBuff>
                        <addBuffArea>
                            <entity id="buffArea">
                                <hitbox>
                                    <circle radius="7.5"/>
                                </hitbox>
                                <areaBuff>
                                    <entity>
                                        <name>Lifedrained</name>
                                        <description>This unit has decreased walk speed and receives magic damage over time.</description>
                                        <buffIcon>spells/dosaz_ult</buffIcon>
                                        <continuousAttributes>
                                            <entity>
                                                <bonusPercentageWalkSpeed>-0.3</bonusPercentageWalkSpeed>
                                            </entity>
                                        </continuousAttributes>
                                        <repeatingEffect interval="0.5">
                                            <entity>
                                                <magicDamage>50</magicDamage>
                                            </entity>
                                        </repeatingEffect>
                                    </entity>
                                </areaBuff>
                                <areaBuffTargetRules>
                                    <entity>
                                        <acceptEnemies/>
                                    </entity>
                                </areaBuffTargetRules>
                            </entity>
                        </addBuffArea>
                        <spawn>
                            <entity>
                                <spawnTemplate>spells/dosaz_passive/unit</spawnTemplate>
                                <spawnBuffs>[parameter0]</spawnBuffs>
                                <spawnRelativePosition>0,6.5</spawnRelativePosition>
                            </entity>
                            <entity>
                                <spawnTemplate>spells/dosaz_passive/unit</spawnTemplate>
                                <spawnBuffs>[parameter0]</spawnBuffs>
                                <spawnRelativePosition>6.1819,2.0086</spawnRelativePosition>
                            </entity>
                            <entity>
                                <spawnTemplate>spells/dosaz_passive/unit</spawnTemplate>
                                <spawnBuffs>[parameter0]</spawnBuffs>
                                <spawnRelativePosition>3.8206,-5.2586</spawnRelativePosition>
                            </entity>
                            <entity>
                                <spawnTemplate>spells/dosaz_passive/unit</spawnTemplate>
                                <spawnBuffs>[parameter0]</spawnBuffs>
                                <spawnRelativePosition>-3.8206,-5.2586</spawnRelativePosition>
                            </entity>
                            <entity>
                                <spawnTemplate>spells/dosaz_passive/unit</spawnTemplate>
                                <spawnBuffs>[parameter0]</spawnBuffs>
                                <spawnRelativePosition>-6.1819,2.0086</spawnRelativePosition>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--remove buff area-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <removeBuffArea>#buffArea</removeBuffArea>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[duration]</triggerDelay>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>