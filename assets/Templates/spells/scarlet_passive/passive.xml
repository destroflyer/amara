<template>
    <entity id="passive">
        <name>Mark of the Assasin</name>
        <description>Your spells mark enemies for 3 seconds. Your basic attacks deal bonus magic damage against marked targets and consume the mark.</description>
        <spellVisualisation>scarlet_passive</spellVisualisation>
        <passiveAddedEffectTriggers>
            <!--add spelleffect-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <addAutoAttackSpellEffects>
                            <entity id="newSpellEffect">
                                <castedEffectTriggers>
                                    <!--target effect-->
                                    <entity>
                                        <targetTarget/>
                                        <triggerConditions>
                                            <entity>
                                                <targetTarget/>
                                                <hasBuffCondition>[parameter0]</hasBuffCondition>
                                            </entity>
                                        </triggerConditions>
                                        <triggeredEffect>
                                            <entity>
                                                <magicDamage>40 + (0.2 * source.abilityPower)</magicDamage>
                                                <removeBuff>[parameter0]</removeBuff>
                                                <playAudio>
                                                    <entity>
                                                        <audio>Sounds/sounds/spells/scarlet_passive_hit.ogg</audio>
                                                    </entity>
                                                </playAudio>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                </castedEffectTriggers>
                            </entity>
                        </addAutoAttackSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveAddedEffectTriggers>
        <passiveRemovedEffectTriggers>
            <!--remove spell effect-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeSpellEffects>#newSpellEffect</removeSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveRemovedEffectTriggers>
    </entity>
</template>