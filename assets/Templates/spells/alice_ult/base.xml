<template>
    <values>
        <delay>1</delay>
        <duration>3</duration>
    </values>
    <entity id="spell">
        <name>Protecting Bubbles</name>
        <description>Channel for [delay] second and then summon a blue bubble around every allied characters for [duration] seconds, making them invulnerable, untargetable, unable to cast spells or basic attacks and giving them a small walk speed buff.</description>
        <spellVisualisation>alice_ult</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
            <!--play audio-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/alice_ult_cast.ogg</audio>
                                <audioVolume>4</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>[delay]</castDuration>
        <castCost>
            <entity>
                <manaCost>100</manaCost>
            </entity>
        </castCost>
        <castAnimation>
            <entity>
                <name>spell1</name>
                <loopDuration>2.833</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--remove vulnerability and targetability-->
            <entity>
                <ruleTarget>
                    <entity>
                        <requireCharacter/>
                        <acceptAllies/>
                    </entity>
                </ruleTarget>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="[duration]">
                            <entity>
                                <name>I'm Blue</name>
                                <description>This unit is invulnerable, untargetable, can't cast spells or basic attacks and has increased walk speed.</description>
                                <buffIcon>spells/alice_ult</buffIcon>
                                <buffVisualisation>bubble_blue</buffVisualisation>
                                <onBuffAddEffectTriggers>
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <removeVulnerability/>
                                                <removeTargetability/>
                                                <disableAutoAttack/>
                                                <disableSpells/>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffAddEffectTriggers>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addVulnerability/>
                                                <addTargetability/>
                                                <enableAutoAttack/>
                                                <enableSpells/>
                                                <spawn>
                                                    <entity>
                                                        <spawnTemplate>spells/alice_passive/object</spawnTemplate>
                                                    </entity>
                                                </spawn>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>