<template>
    <value name="delay">1</value>
    <value name="duration">3</value>
    <entity id="spell">
        <name>TODO</name>
        <description>TODO</description>
        <spellVisualisation>alice_ult</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>[delay]</castDuration>
        <castAnimation>
            <entity>
                <name>spell1</name>
                <loopDuration>2.833</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--remove vulnerability and targetability-->
            <entity>
                <ruleTarget>
                    <entity>
                        <requireCharacter/>
                        <acceptAllies/>
                    </entity>
                </ruleTarget>
                <triggeredEffect>
                    <entity>
                        <removeVulnerability/>
                        <removeTargetability/>
                        <addBuff duration="[duration]">
                            <entity>
                                <name>TODO</name>
                                <description>TODO</description>
                                <buffIcon>spells/alice_ult</buffIcon>
                                <buffVisualisation>bubble_blue</buffVisualisation>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addVulnerability/>
                                                <addTargetability/>
                                                <spawn>
                                                    <entity>
                                                        <spawnTemplate>spells/alice_passive/object</spawnTemplate>
                                                    </entity>
                                                </spawn>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>