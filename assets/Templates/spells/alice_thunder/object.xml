<template>
    <entity id="object">
        <name>Thunder</name>
        <model>Models/alice_thunder/skin_radius_[radius].xml</model>
        <hitbox>
            <circle radius="[radius]"/>
        </hitbox>
        <collisionGroup targetOf="spells" targets="spells|spell_targets"/>
        <lifetime>1.25</lifetime>
    </entity>
    <!--activate hitbox-->
    <entity>
        <instantTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <activateHitbox/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
        <triggerDelay>0.5</triggerDelay>
        <triggerOnce>true</triggerOnce>
    </entity>
    <!--pop bubbles-->
    <entity>
        <collisionTrigger>
            <entity>
                <acceptUntargetable/>
                <acceptAllies/>
                <requireAllBuffs>[thunderPoppableBuff]</requireAllBuffs>
            </entity>
        </collisionTrigger>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger>
            <entity id="enemyCollisionRules">
                <acceptEnemies/>
            </entity>
        </collisionTrigger>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--deactivate hitbox-->
    <entity>
        <collisionTrigger>#enemyCollisionRules</collisionTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <deactivateHitbox/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
</template>