<template>
    <values>
        <duration>1.5</duration>
    </values>
    <entity id="spell">
        <name>Thunder</name>
        <description>After a small delay, a lightning bolt crashes down at the target location, damaging and slowing all enemies in a small area and popping all bubbles.</description>
        <spellVisualisation>alice_thunder</spellVisualisation>
        <spellIndicator>
            <entity>
                <circularIndicator radius="20"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn object-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object([thunderPoppableBuff])</spawnTemplate>
                            </entity>
                        </spawn>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/alice_thunder_cast.ogg</audio>
                                <audioVolume>2</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>positional_skillshot</castType>
        <castCancelCast/>
        <castCancelMovement/>
        <castDuration>0.5</castDuration>
        <castTurnToTarget/>
        <castCost>
            <entity>
                <manaCost>70</manaCost>
            </entity>
        </castCost>
        <castAnimation>
            <entity>
                <name>spell8</name>
                <loopDuration>0.836</loopDuration>
            </entity>
        </castAnimation>
        <range type="center_to_center" distance="20"/>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <magicDamage>150 + (0.5 * source.abilityPower)</magicDamage>
                        <addBuff duration="[duration]">
                            <entity>
                                <name>Thunderstruck</name>
                                <description>This unit has decreased walk speed.</description>
                                <buffIcon>spells/alice_thunder</buffIcon>
                                <continuousAttributes>
                                    <entity>
                                        <bonusPercentageWalkSpeed>-0.3</bonusPercentageWalkSpeed>
                                    </entity>
                                </continuousAttributes>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>