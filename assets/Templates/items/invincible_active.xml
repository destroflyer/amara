<template>
    <values>
        <duration>2.5</duration>
    </values>
    <entity id="spell">
        <unique/>
        <name>Golden Eagle</name>
        <description>Put yourself in stasis for [duration] seconds, rendering yourself untargetable and invulnerable.</description>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <baseCooldown>5</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <removeTargetability/>
                        <removeVulnerability/>
                        <playAudio>
                            <entity id="audioStart">
                                <audio>Sounds/sounds/spells/golden_eagle_start.ogg</audio>
                            </entity>
                            <entity id="audioLoop">
                                <audio>Sounds/sounds/spells/golden_eagle_loop.ogg</audio>
                                <audioLoop/>
                                <audioSuccessor delay="0.05">#audioStart</audioSuccessor>
                            </entity>
                        </playAudio>
                        <addBuff duration="[duration]">
                            <entity>
                                <name>Golden</name>
                                <description>This unit is untargetable and invulnerable.</description>
                                <buffIcon>items/invincible</buffIcon>
                                <buffVisualisation>golden_eagle</buffVisualisation>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addTargetability/>
                                                <addVulnerability/>
                                                <stopAudio>#audioLoop</stopAudio>
                                                <playAudio>
                                                    <entity>
                                                        <audio>Sounds/sounds/spells/golden_eagle_end.ogg</audio>
                                                    </entity>
                                                </playAudio>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>