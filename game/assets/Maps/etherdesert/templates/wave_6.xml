<template>
    <entity>
        <name>Pseudospider</name>
        <isMinion/>
        <!--model-->
        <model>Models/pseudospider/skin.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>idle</name>
                <loopDuration>1.5</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>melee_attack</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>death</name>
                <loopDuration>1</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <scale>0.75</scale>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>150</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>11</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>1.0</bonusFlatAttackSpeed>
                <bonusFlatArmor>20</bonusFlatArmor>
                <bonusFlatMagicResistance>20</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>10</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <bounty>
            <entity>
                <bountyCreepScore></bountyCreepScore>
                <bountyGold>6</bountyGold>
            </entity>
        </bounty>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>20</autoAggro>
    </entity>
</template>