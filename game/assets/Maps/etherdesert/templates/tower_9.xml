<template>
    <entity>
        <name>Son Goku Tower</name>
        <isMinion/>
        <!--model-->
        <model>Models/steve/skin_songoku.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>stand</name>
                <loopDuration>8</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <walkStepDistance>5</walkStepDistance>
        <autoAttackAnimation>
            <entity>
                <name>punch</name>
            </entity>
        </autoAttackAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <scale>1</scale>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <isRespawnable/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>1000</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>47</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>2</bonusFlatAttackSpeed>
                <bonusFlatArmor>25</bonusFlatArmor>
                <bonusFlatMagicResistance>25</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>5</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <isBindable/>
        <isKnockupable/>
        <isSilencable/>
        <isStunnable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>-1</autoAggro>
    </entity>
</template>