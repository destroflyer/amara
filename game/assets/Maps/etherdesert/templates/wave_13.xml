<template>
    <entity>
        <name>Minion</name>
        <isMinion/>
        <!--model-->
        <model>Models/minion/skin_gentleman.xml</model>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>auto_attack</name>
            </entity>
        </autoAttackAnimation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>3000</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>165</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>2</bonusFlatAttackSpeed>
                <bonusFlatArmor>175</bonusFlatArmor>
                <bonusFlatMagicResistance>175</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>4</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <bounty>
            <entity>
                <bountyCreepScore></bountyCreepScore>
                <bountyGold>55</bountyGold>
            </entity>
        </bounty>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>20</autoAggro>
    </entity>
</template>