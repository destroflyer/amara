<template>
    <entity>
        <name>Little Dragon</name>
        <isMinion/>
        <!--model-->
        <model>Models/little_dragon/skin_default.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>default</name>
                <loopDuration>7.542</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>auto_attack</name>
            </entity>
        </autoAttackAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>500</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>45</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>0.8</bonusFlatAttackSpeed>
                <bonusFlatArmor>15</bonusFlatArmor>
                <bonusFlatMagicResistance>15</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>5</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <bounty>
            <entity>
                <bountyCreepScore></bountyCreepScore>
                <bountyGold>20</bountyGold>
            </entity>
        </bounty>
        <!--spells-->
        <autoAttack>
            <entity template="spells/ranged_autoattack,Models/3dsa_fire_dragon_fireball/skin.xml"/>
        </autoAttack>
        <autoAggro>20</autoAggro>
    </entity>
</template>