<template>
    <entity>
        <name>Chicken</name>
        <isMinion/>
        <!--model-->
        <model>Models/chicken/skin.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>idle</name>
                <loopDuration>50</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>pecking2</name>
            </entity>
        </autoAttackAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>700</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>32</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>2.0</bonusFlatAttackSpeed>
                <bonusFlatArmor>35</bonusFlatArmor>
                <bonusFlatMagicResistance>35</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>5</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <isBindable/>
        <isKnockupable/>
        <isSilencable/>
        <isStunnable/>
        <bounty>
            <entity>
                <bountyCreepScore></bountyCreepScore>
                <bountyGold>32</bountyGold>
            </entity>
        </bounty>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>20</autoAggro>
    </entity>
</template>