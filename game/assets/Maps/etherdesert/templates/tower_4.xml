<template>
    <entity>
        <name>Daydream Tower</name>
        <isMinion/>
        <!--model-->
        <model>Models/daydream/skin_fire.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>stand</name>
                <loopDuration>8</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <walkStepDistance>7</walkStepDistance>
        <autoAttackAnimation>
            <entity>
                <name>attack_1</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>death</name>
                <loopDuration>1</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <scale>2</scale>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <isRespawnable/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>2200</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>110</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>2</bonusFlatAttackSpeed>
                <bonusFlatArmor>50</bonusFlatArmor>
                <bonusFlatMagicResistance>50</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>5.75</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>20</autoAggro>
    </entity>
</template>