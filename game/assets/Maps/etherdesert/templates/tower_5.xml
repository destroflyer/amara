<template>
    <entity>
        <name>Nathalya Tower</name>
        <isMinion/>
        <!--model-->
        <model>Models/nathalya/skin_default.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>combatReadyA</name>
                <loopDuration>2.5</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <walkStepDistance>6</walkStepDistance>
        <autoAttackAnimation>
            <entity>
                <name>magicShotSpell</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>death</name>
                <loopDuration>3</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <isRespawnable/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>550</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>20</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>0.8</bonusFlatAttackSpeed>
                <bonusFlatArmor>10</bonusFlatArmor>
                <bonusFlatMagicResistance>10</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>4</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/ranged_autoattack,Models/fireball/skin.xml"/>
        </autoAttack>
        <autoAggro>-1</autoAggro>
    </entity>
</template>