<template>
    <entity>
        <name>Forest Monster</name>
        <isMinion/>
        <!--model-->
        <model>Models/forest_monster/skin.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>Idle</name>
                <loopDuration>8</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>Walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>Attack</name>
            </entity>
        </autoAttackAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="0.2"/>
        </hitbox>
        <scale>4</scale>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>7000</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>530</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>0.8</bonusFlatAttackSpeed>
                <bonusFlatArmor>250</bonusFlatArmor>
                <bonusFlatMagicResistance>250</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>3</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <bounty>
            <entity>
                <bountyCreepScore></bountyCreepScore>
                <bountyGold>65</bountyGold>
            </entity>
        </bounty>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>20</autoAggro>
    </entity>
</template>