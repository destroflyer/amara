<template>
    <entity>
        <name>Soldier</name>
        <isMinion/>
        <!--model-->
        <model>Models/soldier/skin_default.xml</model>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>auto_attack</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>death</name>
                <loopDuration>0.9</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <!--physics-->
        <hitbox>
            <circle radius="0.25"/>
        </hitbox>
        <scale>3</scale>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>5500</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>400</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>2</bonusFlatAttackSpeed>
                <bonusFlatArmor>200</bonusFlatArmor>
                <bonusFlatMagicResistance>200</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>5</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <bounty>
            <entity>
                <bountyCreepScore></bountyCreepScore>
                <bountyGold>80</bountyGold>
            </entity>
        </bounty>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>20</autoAggro>
    </entity>
</template>