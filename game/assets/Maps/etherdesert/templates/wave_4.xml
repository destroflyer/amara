<template>
    <entity>
        <name>Earth Elemental</name>
        <isMinion/>
        <!--model-->
        <model>Models/earth_elemental/skin.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>idle</name>
                <loopDuration>1.25</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>punch_down</name>
            </entity>
        </autoAttackAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>800</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>50</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>0.3</bonusFlatAttackSpeed>
                <bonusFlatArmor>40</bonusFlatArmor>
                <bonusFlatMagicResistance>10</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>3</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>12</autoAggro>
    </entity>
</template>