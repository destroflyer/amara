<template>
    <entity>
        <name>Baron Nashor</name>
        <isMinion/>
        <!--model-->
        <model>Models/cow/skin_baron.xml</model>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>auto_attack</name>
            </entity>
        </autoAttackAnimation>
        <!--physics-->
        <hitbox>
            <circle radius="0.25"/>
        </hitbox>
        <scale>4</scale>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
