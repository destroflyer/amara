        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>30000</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>800</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>2.5</bonusFlatAttackSpeed>
                <bonusFlatArmor>300</bonusFlatArmor>
                <bonusFlatMagicResistance>300</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>4</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <bounty>
            <entity>
                <bountyCharacterKill></bountyCharacterKill>
                <bountyGold>300</bountyGold>
            </entity>
        </bounty>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>20</autoAggro>
    </entity>
