<template>
    <entity>
        <name>Chicken Boss</name>
        <isMinion/>
        <!--model-->
        <model>Models/chicken/skin.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>idle</name>
                <loopDuration>50</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>pecking2</name>
            </entity>
        </autoAttackAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="0.2"/>
        </hitbox>
        <scale>8</scale>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>15000</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>200</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>2.5</bonusFlatAttackSpeed>
                <bonusFlatArmor>200</bonusFlatArmor>
                <bonusFlatMagicResistance>200</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>6</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>28</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <bounty>
            <entity>
                <bountyCharacterKill></bountyCharacterKill>
                <bountyGold>400</bountyGold>
            </entity>
        </bounty>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>20</autoAggro>
    </entity>
</template>