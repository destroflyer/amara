<template>
    <entity>
        <name>Varus</name>
        <!--model-->
        <model>Models/varus/skin_default.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>idle</name>
                <loopDuration>3</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>walk</name>
            </entity>
        </walkAnimation>
        <autoAttackAnimation>
            <entity>
                <name>auto_attack</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>death</name>
                <loopDuration>1.5</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1.5"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>520</bonusFlatMaximumHealth>
                <bonusFlatHealthRegeneration>1</bonusFlatHealthRegeneration>
                <bonusFlatAttackDamage>55</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>0.7</bonusFlatAttackSpeed>
                <bonusFlatArmor>25</bonusFlatArmor>
                <bonusFlatMagicResistance>30</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>6.75</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <attributesPerLevel>
            <entity>
                <bonusFlatMaximumHealth>75</bonusFlatMaximumHealth>
                <bonusFlatHealthRegeneration>0.15</bonusFlatHealthRegeneration>
                <bonusFlatAttackDamage>4</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>0.035</bonusFlatAttackSpeed>
                <bonusFlatArmor>3</bonusFlatArmor>
                <bonusFlatMagicResistance>0</bonusFlatMagicResistance>
            </entity>
        </attributesPerLevel>
        <requestUpdateAttributes/>
        <isTargetable/>
        <isVulnerable/>
        <isBindable/>
        <isKnockupable/>
        <isSilencable/>
        <isStunnable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/ranged_autoattack"/>
        </autoAttack>
        <learnableSpells>
            <empty/>
            <entity template="spells/bubble_gun"/>
            <entity template="spells/sapling_toss"/>
            <entity template="spells/glass_wall"/>
        </learnableSpells>
        <!--other-->
        <healthBarStyle>character</healthBarStyle>
    </entity>
</template>