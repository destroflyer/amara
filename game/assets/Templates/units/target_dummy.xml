<template>
    <entity>
        <name>Target Dummy</name>
        <!--model-->
        <model>Models/maria/skin_default.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>great_sword_idle</name>
                <loopDuration>2</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>great_sword_walk_inPlace</name>
            </entity>
        </walkAnimation>
        <walkStepDistance>4</walkStepDistance>
        <deathAnimation>
            <entity>
                <name>two_handed_sword_death</name>
                <loopDuration>3</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <intersectionPush/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>1000</bonusFlatMaximumHealth>
                <bonusFlatArmor>50</bonusFlatArmor>
                <bonusFlatMagicResistance>50</bonusFlatMagicResistance>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <sightRange>30</sightRange>
        <isTargetable/>
        <isVulnerable/>
        <isBindable/>
        <isKnockupable/>
        <isSilencable/>
        <isStunnable/>
        <!--other-->
        <healthBarStyle>character</healthBarStyle>
    </entity>
</template>