<template>
    <entity id="spell">
        <name>Burning Agony</name>
        <spellVisualisation>burning_agony</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <baseCooldown>4</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--add buff area-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuffArea>
                            <entity id="buffArea">
                                <hitbox>
                                    <circle radius="3"/>
                                </hitbox>
                                <areaBuff>
                                    <entity>
                                        <name>Burned by Agony</name>
                                        <description>This unit receives magic damage over time.</description>
                                        <buffIcon>spells/burning_agony_deactivate</buffIcon>
                                        <buffVisualisation>burning</buffVisualisation>
                                        <repeatingEffect interval="0.5">
                                            <entity>
                                                <magicDamage>30</magicDamage>
                                            </entity>
                                        </repeatingEffect>
                                    </entity>
                                </areaBuff>
                                <areaBuffTargetRules>
                                    <entity>
                                        <acceptEnemies/>
                                    </entity>
                                </areaBuffTargetRules>
                            </entity>
                        </addBuffArea>
                        <addBuff duration="-1">
                            <entity id="visualisationBuff">
                                <name>Agonic Burner</name>
                                <description>This unit deals magic damage over time to nearby enemies.</description>
                                <buffIcon>spells/burning_agony_deactivate</buffIcon>
                                <buffVisualisation>burning</buffVisualisation>
                                <keepOnDeath/>
                            </entity>
                        </addBuff>
                        <replaceSpellWithExistingSpell spellIndex="[parameter0]">
                            <entity template="./burning_agony_deactivate([parameter0],#buffArea,#spell,#visualisationBuff)"/>
                        </replaceSpellWithExistingSpell>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>