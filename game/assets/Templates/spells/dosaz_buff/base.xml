<template>
    <entity id="spell">
        <name>TODO</name>
        <description>TODO</description>
        <spellVisualisation>dosaz_buff</spellVisualisation>
        <spellIndicator>
            <entity>
                <circularIndicator radius="20"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>single_target</castType>
        <!--<castAnimation>
            <entity>
                <name>shoot_arrow</name>
                <loopDuration>1</loopDuration>
            </entity>
        </castAnimation>-->
        <range>20</range>
        <baseCooldown>1</baseCooldown>
        <spellTargetRules>
            <entity>
                <acceptEnemies/>
            </entity>
        </spellTargetRules>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--set aggro-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addEffectTriggers>
                            <!--draw aggro instantly-->
                            <entity>
                                <instantTrigger/>
                                <buffTargetsTarget>[parameter0]</buffTargetsTarget>
                                <triggeredEffect>
                                    <entity>
                                        <setAggroTarget/>
                                    </entity>
                                </triggeredEffect>
                                <triggerOnce/>
                            </entity>
                        </addEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--add buff-->
            <entity>
                <buffTargetsTarget>[parameter0]</buffTargetsTarget>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="5">
                            <entity>
                                <name>TODO</name>
                                <description>TODO</description>
                                <buffIcon>spells/dosaz_buff</buffIcon>
                                <continuousAttributes>
                                    <entity>
                                        <bonusPercentageAttackSpeed>1</bonusPercentageAttackSpeed>
                                        <bonusPercentageWalkSpeed>0.8</bonusPercentageWalkSpeed>
                                    </entity>
                                </continuousAttributes>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>