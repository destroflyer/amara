<template>
    <entity id="object">
        <hitbox>
            <circle radius="7"/>
        </hitbox>
        <collisionGroup targetOf="spells" targets="spell_targets"/>
        <hitboxActive/>
        <lifetime>0.2</lifetime>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger>
            <entity id="collisionRules">
                <acceptEnemies/>
            </entity>
        </collisionTrigger>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerSpellEffects>[parameter0]</triggerSpellEffects>
                <playAudio>
                    <entity>
                        <audio>Sounds/sounds/spells/unstoppable_force_hit.ogg</audio>
                        <audioVolume>1.5</audioVolume>
                        <audioRemoveAfterPlaying/>
                    </entity>
                </playAudio>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--remove object-->
    <entity>
        <collisionTrigger>#collisionRules</collisionTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
</template>