<template>
    <value name="delay">0.3</value>
    <entity id="spell">
        <name>Devastating Strike</name>
        <description>Deal physical damage to an enemy and knockback it.</description>
        <spellVisualisation>dwarf_warrior_knockback</spellVisualisation>
        <spellIndicator>
            <entity>
                <circularIndicator radius="4"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/dwarf_warrior_knockback_hit.ogg</audio>
                                <audioVolume>1</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>single_target</castType>
        <castCancelAction/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>attack_upwards</name>
                <loopDuration>1</loopDuration>
            </entity>
        </castAnimation>
        <range type="edge_to_edge" distance="2"/>
        <baseCooldown>1</baseCooldown>
        <spellTargetRules>
            <entity>
                <acceptEnemies/>
            </entity>
        </spellTargetRules>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--knockback target-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>250 + (0.6 * source.attackDamage)</physicalDamage>
                        <move>
                            <entity>
                                <displacement/>
                                <sourceMovementDirection/>
                                <movementSpeed>30</movementSpeed>
                                <distanceLimit>10</distanceLimit>
                            </entity>
                        </move>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>