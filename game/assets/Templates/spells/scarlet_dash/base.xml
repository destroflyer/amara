<template>
    <entity id="spell">
        <name>TODO</name>
        <description>TODO</description>
        <spellVisualisation>scarlet_dash</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <sourceCasterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeIntersectionPushes/>
                        <removeIntersectionPushed/>
                        <move>
                            <entity>
                                <targetedMovementDirection/>
                                <movementSpeed>50</movementSpeed>
                                <movementAnimation>
                                    <entity>
                                        <name>ninja_run</name>
                                        <loopDuration>999</loopDuration>
                                    </entity>
                                </movementAnimation>
                                <distanceLimit>11</distanceLimit>
                            </entity>
                        </move>
                        <addEffectTriggers>
                            <!--collision target effect-->
                            <entity id="collisionTrigger1">
                                <collisionTrigger>
                                    <entity>
                                        <acceptEnemies/>
                                    </entity>
                                </collisionTrigger>
                                <targetTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <triggerSpellEffects>#spell</triggerSpellEffects>
                                    </entity>
                                </triggeredEffect>
                            </entity>
                            <!--reset cooldown on passive mark collision-->
                            <entity id="collisionTrigger2">
                                <collisionTrigger>
                                    <entity>
                                        <acceptEnemies/>
                                    </entity>
                                </collisionTrigger>
                                <customTarget>#spell</customTarget>
                                <triggerConditions>
                                    <entity>
                                        <targetTarget/>
                                        <hasBuffCondition>[parameter0]</hasBuffCondition>
                                    </entity>
                                </triggerConditions>
                                <triggeredEffect>
                                    <entity>
                                        <resetCooldown/>
                                    </entity>
                                </triggeredEffect>
                            </entity>
                            <!--remove collision trigger-->
                            <entity>
                                <targetReachedTrigger/>
                                <sourceTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <addIntersectionPushes/>
                                        <addIntersectionPushed/>
                                        <removeEffectTriggers>#collisionTrigger1,#collisionTrigger2</removeEffectTriggers>
                                    </entity>
                                </triggeredEffect>
                                <triggerOnce/>
                                <triggerOnCancel/>
                            </entity>
                        </addEffectTriggers>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/scarlet_dash_cast.ogg</audio>
                                <audioVolume>1.5</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castTurnToTarget/>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>150 + (0.7 * source.abilityPower)</physicalDamage>
                        <addBuff duration="3">[parameter0]</addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>