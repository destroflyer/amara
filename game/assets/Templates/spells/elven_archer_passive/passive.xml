<template>
    <value name="duration">4</value>
    <value name="maximumStacks">8</value>
    <entity id="passive">
        <name>TODO</name>
        <description>Your basic attacks grant a stack (+5% attack speed), up to a maximum of [maximumStacks] stacks. The stacks will get removed after [duration] seconds of not attacking.</description>
        <spellVisualisation>elven_archer_passive</spellVisualisation>
        <passiveAddedEffectTriggers>
            <!--add buff and spelleffect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <addAutoAttackSpellEffects>
                            <entity id="newSpellEffect">
                                <castedEffectTriggers>
                                    <!--add buff-->
                                    <entity>
                                        <casterTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addBuff duration="[duration]">
                                                    <entity id="buff">
                                                        <name>TODO</name>
                                                        <description>This unit gains attack speed with each basic attack, up to [maximumStacks] times.</description>
                                                        <buffIcon>spells/elven_archer_passive</buffIcon>
                                                        <buffStacks>
                                                            <entity id="buffStacks">
                                                                <stacks>0</stacks>
                                                                <maximumStacks>[maximumStacks]</maximumStacks>
                                                            </entity>
                                                        </buffStacks>
                                                        <continuousAttributesPerStack>
                                                            <entity>
                                                                <bonusPercentageAttackSpeed>0.05</bonusPercentageAttackSpeed>
                                                            </entity>
                                                        </continuousAttributesPerStack>
                                                        <onBuffRemoveEffectTriggers>
                                                            <entity>
                                                                <customTarget>#buffStacks</customTarget>
                                                                <triggeredEffect>
                                                                    <entity>
                                                                        <clearStacks/>
                                                                    </entity>
                                                                </triggeredEffect>
                                                                <triggerSource>#passive</triggerSource>
                                                            </entity>
                                                        </onBuffRemoveEffectTriggers>
                                                    </entity>
                                                </addBuff>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                    <!--add stacks-->
                                    <entity>
                                        <customTarget>#buffStacks</customTarget>
                                        <triggeredEffect>
                                            <entity>
                                                <addStacks>1</addStacks>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                </castedEffectTriggers>
                            </entity>
                        </addAutoAttackSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveAddedEffectTriggers>
    </entity>
</template>