<template>
    <value name="maximumStacks">10</value>
    <entity id="spell">
        <!--<name>TODO</name>
        <description>TODO</description>
        <spellVisualisation></spellVisualisation>-->
        <learnEffectTriggers>
            <!--add buff-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="-1">
                            <entity id="buff">
                                <!--<name>TODO</name>-->
                                <description>TODO</description>
                                <!--<buffIcon>TODO</buffIcon>-->
                                <buffStacks>
                                    <entity id="buffStacks">
                                        <stacks>0</stacks>
                                        <maximumStacks>[maximumStacks]</maximumStacks>
                                    </entity>
                                </buffStacks>
                                <keepOnDeath/>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </learnEffectTriggers>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <spellPassives>
            <entity template="./passive(#buffStacks)"/>
        </spellPassives>
        <castType>selfcast</castType>
        <castCost>
            <entity>
                <buffStacksCost buffEntity="#buff" stacks="5"/>
            </entity>
        </castCost>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <heal>100</heal>
                        <addBuff duration="1">
                            <entity>
                                <name>Full Stomach</name>
                                <description>This unit has increased walk speed.</description>
                                <!--<buffIcon>TODO</buffIcon>-->
                                <buffVisualisation>turbo</buffVisualisation>
                                <continuousAttributes>
                                    <entity>
                                        <bonusPercentageWalkSpeed>0.35</bonusPercentageWalkSpeed>
                                    </entity>
                                </continuousAttributes>
                            </entity>
                        </addBuff>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/dwarf_warrior_heal_cast.ogg</audio>
                                <audioVolume>1</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>