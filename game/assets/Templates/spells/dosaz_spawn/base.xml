<template>
    <value name="buffDuration">4</value>
    <entity id="spell">
        <name>TODO</name>
        <description>TODO</description>
        <spellVisualisation>dosaz_spawn</spellVisualisation>
        <spellIndicator>
            <entity>
                <circularIndicator radius="20"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>0.15</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>positional_skillshot</castType>
        <castCancelAction/>
        <castDuration>0.3</castDuration>
        <castTurnToTarget/>
        <!--<castAnimation>
            <entity>
                <name>shoot_arrow</name>
                <loopDuration>1</loopDuration>
            </entity>
        </castAnimation>-->
        <range>20</range>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--spawn object-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./unit</spawnTemplate>
                                <spawnBuffs>[parameter0]</spawnBuffs>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>