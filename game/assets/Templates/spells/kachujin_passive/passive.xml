<template>
    <value name="duration">4</value>
    <value name="maximumStacks">5</value>
    <entity id="passive">
        <name>Weakpoint Study</name>
        <description>Kachujin studies an enemies weakpoints while attacking them - Each of your basic attacks adds a stack (-6 armor), up to a maximum of [maximumStacks] stacks. The stacks will get removed after [duration] seconds of not attacking.</description>
        <spellVisualisation>kachujin_passive</spellVisualisation>
        <passiveAddedEffectTriggers>
            <!--add spell effect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <addAutoAttackSpellEffects>
                            <entity id="newSpellEffect">
                                <castedEffectTriggers>
                                    <!--add buff-->
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addBuff duration="[duration]">
                                                    <entity id="buff">
                                                        <name>Weakpoint</name>
                                                        <description>This unit has decreased armor.</description>
                                                        <buffIcon>spells/kachujin_passive</buffIcon>
                                                        <buffStacks>
                                                            <entity id="buffStacks">
                                                                <stacks>0</stacks>
                                                                <maximumStacks>[maximumStacks]</maximumStacks>
                                                            </entity>
                                                        </buffStacks>
                                                        <continuousAttributesPerStack>
                                                            <entity>
                                                                <bonusFlatArmor>-6</bonusFlatArmor>
                                                            </entity>
                                                        </continuousAttributesPerStack>
                                                        <onBuffRemoveEffectTriggers>
                                                            <entity>
                                                                <customTarget>#buffStacks</customTarget>
                                                                <triggeredEffect>
                                                                    <entity>
                                                                        <clearStacks/>
                                                                    </entity>
                                                                </triggeredEffect>
                                                                <triggerSource>#passive</triggerSource>
                                                            </entity>
                                                        </onBuffRemoveEffectTriggers>
                                                    </entity>
                                                </addBuff>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                    <!--add stacks-->
                                    <entity>
                                        <customTarget>#buffStacks</customTarget>
                                        <triggeredEffect>
                                            <entity>
                                                <addStacks>1</addStacks>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                </castedEffectTriggers>
                            </entity>
                        </addAutoAttackSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveAddedEffectTriggers>
        <passiveRemovedEffectTriggers>
            <!--remove spell effect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeBuff>#buff</removeBuff>
                        <removeSpellEffects>#newSpellEffect</removeSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveRemovedEffectTriggers>
    </entity>
</template>