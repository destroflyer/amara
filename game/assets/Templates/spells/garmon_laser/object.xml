<template>
    <entity id="object">
        <model>Models/ganfaul_laser/skin.xml</model>
    </entity>
    <!--add buff area-->
    <entity id="addBuffAreaTrigger">
        <instantTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <activateHitbox/>
                <addBuffArea>
                    <entity id="buffArea">
                        <hitbox>
                            <rectangle x="12.5" width="25" height="2.5"/>
                        </hitbox>
                        <collisionGroup targetOf="spells" targets="spell_targets"/>
                        <intersectionRules>
                            <entity>
                                <acceptEnemies/>
                            </entity>
                        </intersectionRules>
                        <areaBuff>
                            <entity>
                                <name>Lasered</name>
                                <description>This unit receives magic damage over time.</description>
                                <buffIcon>spells/ganfaul_laser</buffIcon>
                                <repeatingEffect interval="0.25">
                                    <entity>
                                        <magicDamage>60 + (0.25 * source.abilityPower)</magicDamage>
                                    </entity>
                                </repeatingEffect>
                            </entity>
                        </areaBuff>
                        <areaBuffTargetRules>
                            <entity>
                                <acceptEnemies/>
                            </entity>
                        </areaBuffTargetRules>
                    </entity>
                </addBuffArea>
                <playAudio>
                    <entity id="audioLoop">
                        <audio>Sounds/sounds/spells/ganfaul_laser_loop.ogg</audio>
                        <audioLoop/>
                        <audioVolume>0.75</audioVolume>
                    </entity>
                </playAudio>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
        <triggerOnce/>
    </entity>
    <!--remove buff area-->
    <entity>
        <instantTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
                <removeBuffArea>#buffArea</removeBuffArea>
                <stopAudio>#audioLoop</stopAudio>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
        <triggerDelay>1.4</triggerDelay>
        <triggerOnce>true</triggerOnce>
    </entity>
    <!--remove addBuffAreaTrigger-->
    <entity>
        <instantTrigger/>
        <customTarget>#addBuffAreaTrigger</customTarget>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
        <triggerDelay>1.4</triggerDelay>
        <triggerOnce>true</triggerOnce>
    </entity>
</template>