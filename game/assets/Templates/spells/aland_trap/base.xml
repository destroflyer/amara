<template>
    <entity id="spell">
        <name>TODO</name>
        <description>TODO</description>
        <!--<spellVisualisation>aland_trap</spellVisualisation>-->
        <spellIndicator>
            <entity>
                <circularIndicator radius="10"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object</spawnTemplate>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>positional_skillshot</castType>
        <castCancelAction/>
        <castDuration>0.5</castDuration>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>place</name>
                <loopDuration>1</loopDuration>
            </entity>
        </castAnimation>
        <range type="center_to_center" distance="10"/>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <magicDamage>150 + (0.5 * source.abilityPower)</magicDamage>
                        <addBuff duration="3">
                            <entity>
                                <name>TODO</name>
                                <description>TODO</description>
                                <!--<buffIcon>spells/aland_trap</buffIcon>-->
                                <continuousAttributes>
                                    <entity>
                                        <bonusPercentageWalkSpeed>-0.7</bonusPercentageWalkSpeed>
                                    </entity>
                                </continuousAttributes>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>