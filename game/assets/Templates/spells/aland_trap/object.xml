<template>
    <entity id="object">
        <model>Models/bear_trap/skin.xml</model>
        <animation>
            <entity>
                <name>open</name>
                <loopDuration>0.5</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </animation>
        <hitbox>
            <circle radius="1"/>
        </hitbox>
        <collisionGroup targetOf="spells" targets="spell_targets"/>
        <sightRange>3</sightRange>
        <lifetime>180</lifetime>
    </entity>
    <!--activate hitbox-->
    <entity>
        <instantTrigger/>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <activateHitbox/>
                <addStealth/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
        <triggerDelay>0.5</triggerDelay>
        <triggerOnce/>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger>
            <entity id="collisionRules">
                <acceptEnemies/>
            </entity>
        </collisionTrigger>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--deactivate hitbox-->
    <entity>
        <collisionTrigger>#collisionRules</collisionTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <deactivateHitbox/>
                <removeStealth/>
                <playAnimation>
                    <entity>
                        <name>close</name>
                        <loopDuration>0.25</loopDuration>
                        <freezeAfterPlaying/>
                    </entity>
                </playAnimation>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--remove object-->
    <entity>
        <collisionTrigger>#collisionRules</collisionTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
        <triggerDelay>0.5</triggerDelay>
    </entity>
</template>