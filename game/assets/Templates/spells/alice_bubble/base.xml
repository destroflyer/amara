<template>
    <value name="delay">0.18</value>
    <value name="duration">1.5</value>
    <entity id="spell">
        <name>TODO</name>
        <description>TODO</description>
        <!--<spellVisualisation>alice_bubble</spellVisualisation>-->
        <spellIndicator>
            <entity>
                <linearIndicator width="2" height="19.5"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./projectile</spawnTemplate>
                                <spawnMoveToTarget/>
                                <spawnMovementSpeed>20</spawnMovementSpeed>
                                <spawnBuffs>[parameter0]</spawnBuffs>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>positional_skillshot</castType>
        <castCancelAction/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <!--<castAnimation>
            <entity>
                <name>spell5</name>
                <loopDuration>1</loopDuration>
            </entity>
        </castAnimation>-->
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <magicDamage>120 + (0.5 * source.abilityPower)</magicDamage>
                        <addKnockup>
                            <entity>
                                <knockupDuration>[duration]</knockupDuration>
                                <knockupHeight>4</knockupHeight>
                            </entity>
                        </addKnockup>
                        <addBuff duration="[duration]">
                            <entity>
                                <name>TODO</name>
                                <description>TODO</description>
                                <!--<buffIcon>spells/alice_bubble</buffIcon>-->
                                <buffVisualisation>bubble_white</buffVisualisation>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <spawn>
                                                    <entity>
                                                        <spawnTemplate>spells/alice_passive/object</spawnTemplate>
                                                    </entity>
                                                </spawn>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>