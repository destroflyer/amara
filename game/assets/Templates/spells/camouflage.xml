<template>
    <value name="duration">5</value>
    <entity id="spell">
        <name>Camouflage</name>
        <description>Grants the caster stealth for [duration] seconds.</description>
        <spellVisualisation>camouflage</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <baseCooldown>10</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addStealth/>
                        <addBuff duration="[duration]">
                            <entity>
                                <buffVisualisation>withered</buffVisualisation>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <casterTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <removeStealth/>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>