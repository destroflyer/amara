<template>
    <value name="duration">3</value>
    <entity id="passive">
        <name>Holy Sword</name>
        <description>After hitting an ability, your first autoattack in the next [duration] seconds deals bonus magical damage.</description>
        <spellVisualisation>maria_passive</spellVisualisation>
        <passiveAddedEffectTriggers>
            <!--add spell effect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <addSpellsSpellEffects>
                            <entity id="newSpellEffect1">
                                <castedEffectTriggers>
                                    <!--add buff-->
                                    <entity>
                                        <casterTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addAutoAttackSpellEffects>
                                                    <entity id="newSpellEffect2">
                                                        <castedEffectTriggers>
                                                            <!--target effect-->
                                                            <entity>
                                                                <targetTarget/>
                                                                <triggeredEffect>
                                                                    <entity>
                                                                        <magicDamage>50 + (0.15 + source.attackDamage)</magicDamage>
                                                                    </entity>
                                                                </triggeredEffect>
                                                                <triggerSource>#passive</triggerSource>
                                                            </entity>
                                                            <!--remove buff-->
                                                            <entity>
                                                                <casterTarget/>
                                                                <triggeredEffect>
                                                                    <entity>
                                                                        <removeBuff>##buff</removeBuff>
                                                                    </entity>
                                                                </triggeredEffect>
                                                                <triggerSource>#passive</triggerSource>
                                                            </entity>
                                                        </castedEffectTriggers>
                                                    </entity>
                                                </addAutoAttackSpellEffects>
                                                <addBuff duration="[duration]">
                                                    <entity id="buff">
                                                        <name>Holy Sword</name>
                                                        <description>This units next basic attack will deal bonus magic damage.</description>
                                                        <buffIcon>spells/maria_passive</buffIcon>
                                                        <buffVisualisation>maria_passive</buffVisualisation>
                                                        <onBuffRemoveEffectTriggers>
                                                            <entity>
                                                                <casterTarget/>
                                                                <triggeredEffect>
                                                                    <entity>
                                                                        <removeSpellEffects>#newSpellEffect2</removeSpellEffects>
                                                                    </entity>
                                                                </triggeredEffect>
                                                                <triggerSource>#passive</triggerSource>
                                                            </entity>
                                                        </onBuffRemoveEffectTriggers>
                                                    </entity>
                                                </addBuff>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                </castedEffectTriggers>
                            </entity>
                        </addSpellsSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveAddedEffectTriggers>
        <passiveRemovedEffectTriggers>
            <!--remove spell effect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeSpellEffects>#newSpellEffect1</removeSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveRemovedEffectTriggers>
    </entity>
</template>