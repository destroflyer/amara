<template>
    <entity id="spell">
        <name>Intervention</name>
        <spellVisualisation>intervention</spellVisualisation>
        <instantEffectTriggers>
            <!--trigger spell effects-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <triggerSpellEffects>#spell</triggerSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>selfcast</castType>
        <baseCooldown>90</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--remove vulnerability-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeVulnerability/>
                        <addBuff duration="3">
                            <entity>
                                <name>Intervented</name>
                                <description>This unit is invulnerable.</description>
                                <buffIcon>spells/intervention</buffIcon>
                                <buffVisualisation>intervention</buffVisualisation>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <customTarget>[parameter0]</customTarget>
                                        <triggeredEffect>
                                            <entity>
                                                <addVulnerability/>
                                            </entity>
                                        </triggeredEffect>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </entity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>