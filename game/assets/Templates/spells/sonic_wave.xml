<template>
    <entity id="spell">
        <name>Sonic Wave</name>
        <spellVisualisation>sonic_wave</spellVisualisation>
        <instantEffectTriggers>
            <!--spawn projectile-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./sonic_wave_projectile</spawnTemplate>
                                <spawnMovementSpeed>17</spawnMovementSpeed>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castTurnToTarget/>
        <baseCooldown>11</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--add mark-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="3">
                            <enity id="buff">
                                <name>Sonic Mark</name>
                                <description>This unit is marked and can be dashed to.</description>
                                <buffIcon>spells/sonic_wave</buffIcon>
                                <buffVisualisation>sonic_wave_mark</buffVisualisation>
                                <onBuffRemoveEffectTriggers>
                                    <entity>
                                        <casterTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <replaceSpellWithExistingSpell spellIndex="[parameter0]">#spell</replaceSpellWithExistingSpell>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#spell</triggerSource>
                                    </entity>
                                </onBuffRemoveEffectTriggers>
                            </enity>
                        </addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--target effect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <replaceSpellWithNewSpell spellIndex="[parameter0]" newSpellTemplate="./resonating_strike(#buff)"/>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>