<template>
    <value name="delay">0.5</value>
    <entity id="spell">
        <name>TODO</name>
        <description>TODO</description>
        <spellVisualisation>tristan_stun</spellVisualisation>
        <spellIndicator>
            <entity>
                <linearIndicator width="3" height="9"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn object-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object</spawnTemplate>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>[delay]</triggerDelay>
            </entity>
            <!--play audio-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <playAudio>
                            <entity>
                                <audio>Sounds/sounds/spells/maria_stab_cast.ogg</audio>
                                <audioVolume>0.75</audioVolume>
                            </entity>
                        </playAudio>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
                <triggerDelay>0.15</triggerDelay>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>spell2</name>
                <loopDuration>0.7</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>100 + (0.5 * source.attackDamage)</physicalDamage>
                        <addStun>1.25</addStun>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>