<template>>
    <value name="stacksDuration">3.5</value>
    <value name="maximumStacks">3</value>
    <value name="slowDuration">2</value>
    <entity id="passive">
        <name>TODO</name>
        <description>TODO</description>
        <spellVisualisation>aland_passive</spellVisualisation>
        <passiveAddedEffectTriggers>
            <!--add spell effect-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <!--add spell effects-->
                        <addSpellsSpellEffects setSourcesToSpells="true">
                            <entity id="newSpellEffect">
                                <castedEffectTriggers>
                                    <!--add buff-->
                                    <entity>
                                        <targetTarget/>
                                        <triggeredEffect>
                                            <entity>
                                                <addBuff duration="[stacksDuration]">
                                                    <entity id="buff">
                                                        <name>TODO</name>
                                                        <description>TODO</description>
                                                        <buffIcon>spells/aland_passive</buffIcon>
                                                        <buffStacks>
                                                            <entity id="buffStacks">
                                                                <stacks>0</stacks>
                                                                <maximumStacks>[maximumStacks]</maximumStacks>
                                                            </entity>
                                                        </buffStacks>
                                                    </entity>
                                                </addBuff>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                    <!--add stacks-->
                                    <entity>
                                        <customTarget>#buffStacks</customTarget>
                                        <triggeredEffect>
                                            <entity>
                                                <addStacks>1</addStacks>
                                            </entity>
                                        </triggeredEffect>
                                        <triggerSource>#passive</triggerSource>
                                    </entity>
                                </castedEffectTriggers>
                            </entity>
                        </addSpellsSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveAddedEffectTriggers>
        <passiveRemovedEffectTriggers>
            <!--remove spell effects-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeSpellEffects>#newSpellEffect</removeSpellEffects>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveRemovedEffectTriggers>
    </entity>
    <!--clear stacks-->
    <entity>
        <stacksReachedTrigger>[maximumStacks]</stacksReachedTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <clearStacks/>
            </entity>
        </triggeredEffect>
        <triggerSource>#buffStacks</triggerSource>
    </entity>
    <!--target effect-->
    <entity>
        <stacksReachedTrigger>[maximumStacks]</stacksReachedTrigger>
        <buffTargetsTarget>#buff</buffTargetsTarget>
        <triggeredEffect>
            <entity>
                <magicDamage>80 + (0.3 + source.abilityPower)</magicDamage>
                <addBuff duration="[slowDuration]">
                    <entity>
                        <name>TODO</name>
                        <description>This unit has decreased walk speed.</description>
                        <buffIcon>spells/aland_passive</buffIcon>
                        <continuousAttributes>
                            <entity>
                                <bonusPercentageWalkSpeed>-0.3</bonusPercentageWalkSpeed>
                            </entity>
                        </continuousAttributes>
                    </entity>
                </addBuff>
            </entity>
        </triggeredEffect>
        <triggerSource>#buffStacks</triggerSource>
    </entity>
</template>