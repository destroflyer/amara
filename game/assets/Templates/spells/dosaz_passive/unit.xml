<template>
    <entity id="unit">
        <name>TODO</name>
        <isMinion/>
        <!--model-->
        <model>Models/ghost/skin.xml</model>
        <idleAnimation>
            <entity id="idleAnimation">
                <name>idle</name>
                <loopDuration>1.5</loopDuration>
            </entity>
        </idleAnimation>
        <walkAnimation>
            <entity>
                <name>fly_forward</name>
            </entity>
        </walkAnimation>
        <walkStepDistance>6</walkStepDistance>
        <autoAttackAnimation>
            <entity>
                <name>melee_attack</name>
            </entity>
        </autoAttackAnimation>
        <deathAnimation>
            <entity>
                <name>die</name>
                <loopDuration>1.667</loopDuration>
                <freezeAfterPlaying/>
            </entity>
        </deathAnimation>
        <animation>#idleAnimation</animation>
        <!--physics-->
        <hitbox>
            <circle radius="0.5"/>
        </hitbox>
        <intersectionPushes/>
        <intersectionPushed/>
        <collisionGroup targetOf="map|units|spell_targets" targets="units"/>
        <hitboxActive/>
        <!--stats-->
        <isAlive/>
        <baseAttributes>
            <entity>
                <bonusFlatMaximumHealth>100</bonusFlatMaximumHealth>
                <bonusFlatAttackDamage>50</bonusFlatAttackDamage>
                <bonusFlatAttackSpeed>0.75</bonusFlatAttackSpeed>
                <bonusFlatArmor>20</bonusFlatArmor>
                <bonusFlatMagicResistance>20</bonusFlatMagicResistance>
                <bonusFlatWalkSpeed>8</bonusFlatWalkSpeed>
            </entity>
        </baseAttributes>
        <requestUpdateAttributes/>
        <isTargetable/>
        <isVulnerable/>
        <isBindable/>
        <isKnockupable/>
        <isSilencable/>
        <isStunnable/>
        <!--spells-->
        <autoAttack>
            <entity template="spells/melee_autoattack"/>
        </autoAttack>
        <autoAggro>12</autoAggro>
        <lifetime>20</lifetime>
    </entity>
</template>