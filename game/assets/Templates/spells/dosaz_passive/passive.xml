<template>
    <entity id="passive">
        <name>TODO</name>
        <description>TODO</description>
        <spellVisualisation>dosaz_passive</spellVisualisation>
        <passiveAddedEffectTriggers>
            <!--add buff and spawn trigger-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <addBuff duration="-1">[parameter0]</addBuff>
                        <addEffectTriggers>
                            <!--spawn trigger-->
                            <entity id="spawnTrigger">
                                <surroundingDeathTrigger>20</surroundingDeathTrigger>
                                <targetTarget/>
                                <triggeredEffect>
                                    <entity>
                                        <spawn>
                                            <entity>
                                                <spawnTemplate>./object([parameter0],[parameter1])</spawnTemplate>
                                            </entity>
                                        </spawn>
                                    </entity>
                                </triggeredEffect>
                            </entity>
                        </addEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveAddedEffectTriggers>
        <passiveRemovedEffectTriggers>
            <!--remove buff and spawn trigger-->
            <entity>
                <casterTarget/>
                <triggeredEffect>
                    <entity>
                        <removeBuff>[parameter0]</removeBuff>
                        <removeEffectTriggers>#spawnTrigger,#collisionTrigger</removeEffectTriggers>
                    </entity>
                </triggeredEffect>
                <triggerSource>#passive</triggerSource>
            </entity>
        </passiveRemovedEffectTriggers>
    </entity>
</template>