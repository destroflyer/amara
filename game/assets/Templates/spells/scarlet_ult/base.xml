<template>
    <value name="delay">0.1</value>
    <value name="slowDuration">2</value>
    <entity id="spell">
        <name>TODO</name>
        <description>TODO</description>
        <spellVisualisation>scarlet_ult</spellVisualisation>
        <spellIndicator>
            <entity>
                <linearIndicator width="2" height="11"/>
            </entity>
        </spellIndicator>
        <instantEffectTriggers>
            <!--spawn object-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <spawn>
                            <entity>
                                <spawnTemplate>./object</spawnTemplate>
                            </entity>
                        </spawn>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </instantEffectTriggers>
        <castType>linear_skillshot</castType>
        <castCancelAction/>
        <castDuration>[delay]</castDuration>
        <castTurnToTarget/>
        <castAnimation>
            <entity>
                <name>down_hit</name>
                <loopDuration>0.5</loopDuration>
            </entity>
        </castAnimation>
        <baseCooldown>1</baseCooldown>
    </entity>
    <!--spell effect-->
    <entity>
        <castedSpell>#spell</castedSpell>
        <castedEffectTriggers>
            <!--target effect-->
            <entity>
                <targetTarget/>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>300 + (0.6 * source.abilityPower)</physicalDamage>
                        <addBuff duration="3">[parameter0]</addBuff>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--marked targets below threshhold -> execute-->
            <entity>
                <targetTarget/>
                <triggerConditions>
                    <entity id="executeCondition">
                        <targetTarget/>
                        <hasBuffCondition>[parameter0]</hasBuffCondition>
                        <hasHealthPortionCondition portion="0.2" lessOrMore="true" allowEqual="false"/>
                    </entity>
                </triggerConditions>
                <triggeredEffect>
                    <entity>
                        <physicalDamage>999999</physicalDamage>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
            <!--marked targets below threshhold -> reset dash-->
            <entity>
                <customTarget>[parameter1]</customTarget>
                <triggerConditions>#executeCondition</triggerConditions>
                <triggeredEffect>
                    <entity>
                        <resetCooldown/>
                    </entity>
                </triggeredEffect>
                <triggerSource>#spell</triggerSource>
            </entity>
        </castedEffectTriggers>
    </entity>
</template>