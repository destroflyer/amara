<template>
    <entity id="object">
        <model>Models/scarlet_ult/skin.xml</model>
        <hitbox>
            <rectangle x="4" width="8" height="4"/>
        </hitbox>
        <collisionGroup targetOf="spells" targets="spell_targets"/>
        <hitboxActive/>
        <lifetime>0.2</lifetime>
    </entity>
    <!--trigger spell effects-->
    <entity>
        <collisionTrigger>
            <entity id="collisionRules">
                <acceptEnemies/>
            </entity>
        </collisionTrigger>
        <targetTarget/>
        <triggeredEffect>
            <entity>
                <triggerCastedSpellEffects/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
    <!--remove object-->
    <entity>
        <collisionTrigger>#collisionRules</collisionTrigger>
        <sourceTarget/>
        <triggeredEffect>
            <entity>
                <removeEntity/>
            </entity>
        </triggeredEffect>
        <triggerSource>#object</triggerSource>
    </entity>
</template>